<script type="text/javascript">
    var Table = $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
        "bFilter": true,
        "bSearchable": true,
        "bInfo": true,
        "bPaginate": true,
        "ordering": true,
        scrollY: "400px",
        scrollX: true,
        scrollCollapse: true,
        "columnDefs": [{ "targets": [6,7], "visible": false }],
    });
    function ShowMsgPopup(content) {
        $.alert({
            title: "Device Approval",
            content: content,
        });
    }
    var Aurl = '@Session["APIurl"]';
    var arrData = [];
    var UID = '@Session["LoginUserID"]';
    var RID = '@Session["RoleID"]';
    var nMode = 1;
    var FID = 1;// $("#txtFormID").val();
    InitiateData();
    function InitiateData() {
        Table.clear().draw(); Table.clear().draw();
        $.ajax({
            url: Aurl + "SystemApproval/get",
            type: 'GET',
            datatype: 'json',
            data: { Mode: 1 },//, nMode: 4, nDeviceID: "", nUserID: "", nDBs: ""   Connection: StrCon
            success: function (data) {
                $.each(data, function (i, items) {
                    var IsAct = items.Activate == "False" ? "" : "Disabled";
                    var btncls = items.Activate == "False" ? "btn-warning" : "btn-success"
                    Table.row.add([
                        (i + 1),
                        items.UserName,
                        items.MobileNo,
                        items.DeviceName,
                        '<button class="btn ' + btncls +' btnActivates"' + IsAct + '> Activate </button>',
                        '<button class="btn btn-danger btnDeActivates"> De-Activate </button>',
                        items.DeviceID,
                        items.UserID
                    ]).draw(false);
                });
            }
        });
    }
    $('#tblMasterData tbody').on('click', 'button.btnActivates', function () {
        rowdata = Table.row($(this).parents('tr')).data();
        ActiveandDeActivateUser(5, rowdata[6], rowdata[7]);
        //alert("Activate\nDevice ID : " + rowdata[5] + "\nUserID : " + rowdata[6] + "\nDB Name : " + rowdata[7]);
    });
    $('#tblMasterData tbody').on('click', 'button.btnDeActivates', function () {
        rowdata = Table.row($(this).parents('tr')).data();
        ActiveandDeActivateUser(6, rowdata[6], rowdata[7]);
        //alert("De-Activate\nDevice ID : " + rowdata[5] + "\nUserID : " + rowdata[6] + "\nDB Name : " + rowdata[7]);

    });
    function ActiveandDeActivateUser(Mode, DeviceID, UserID)
    {
        $.ajax({
            url: Aurl + "SystemApproval/save",
            type: 'GET',
            datatype: 'json',
            data: { nMode: Mode, nDeviceID: DeviceID, nUserID: UserID },//
            success: function (data) {
                if (Mode == 5) {
                    ShowMsgPopup("<label style='color:green'>Activated Successfully.!!!</label>")
                }
                else {
                    ShowMsgPopup("<label style='color:red'>De-Activated Successfully.!!!</label>")
                }
            }
        });
        InitiateData();
    }

</script>