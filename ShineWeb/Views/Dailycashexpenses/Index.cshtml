                <table class="table table-bordered" id="tblMasterFAData" width="100%">
                    <thead>
                        <tr class="trclrforcolheader">
                            <th style="text-align:center;font-size: 12px;width:0%;">ID</th>
                            <th style="text-align:center;font-size: 12px;width:2%;">#</th>
                            <th style="text-align:center;font-size: 12px;width:48%;">Account Name</th>
                            <th style="text-align:center;font-size: 12px;width:10%;">Amount</th>
