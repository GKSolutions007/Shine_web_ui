        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
            <div style="padding-left:50px;">
                <span class="form-label">
                    <input class="form-control FormclrField" type="date" id="dtpDate" oninput="javascript: if (this.value > this.max) { this.value = this.max; }" />
                    <label class="labelup" for="txtCode"> Date</label>
                </span>
                <div style="color: red; padding-top: 5px; padding-left: 5px;" id="divErrDate" class="clrdiv"></div>
            </div>
            @*<input type="date" class="gdInput" id="dtpDate" />
                <div style="color: red; padding-top: 5px; padding-left: 5px;" id="divErrDate" class="clrdiv"></div>*@
        </div>
    </div>
    <hr />
    <div id="dvMainTable">
