<script type="text/javascript">

    var Table = $('#tblMasterFAData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
        "bFilter": true,
        "bSearchable": true,
        "bInfo": false,
        "bPaginate": false,
        "ordering": true,
        scrollY: "400px",
        scrollX: true,
        scrollCollapse: true,
        order: [[3, 'asc']],
        "columnDefs": [{ "targets": [0], "visible": false, searchable: false }, { "targets": [1], "class": "text-center" },
            { "targets": [3], "class": "text-right" }, { "targets": [2], width: "48%" }, { "targets": [3], width: "10%" }, { "targets": [4], width: "12%" }
            , { "targets": [5], width: "30%" },
            {
                "targets": 3, // Amount column index
                "className": "text-right",
                render: function (data, type, row, meta) {
