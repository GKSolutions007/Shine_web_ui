                    return data; // return raw HTML for display
                }
            },
        ],
    });
    function bindLiveSortEvents() {
        $('#tblMasterFAData tbody').on('keyup change', 'input', function () {
            Table.draw(); // Redraw and re-sort the table
        });
    }
    // Call it once on page load
    //bindLiveSortEvents();
    function filterme(searchValue) {
        //var searchValue = $('#txtCustomFilter').val().trim();

        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            var value = parseFloat(data[3]) || 0; // Convert first column to number
            var category = data[2] || ''; // Get the second column value

            //return (searchValue == "" || category.toUpperCase() == searchValue.toUpperCase());//value > 0 && 
            return (category.includes(searchValue));
        });

        Table.draw();
        $.fn.dataTable.ext.search.pop(); // Remove the filter after applying it
    }
    $('#txtCustomFilter').on('change', function (e) {
        var val = e.target.value;
        filterme(val);
    });
    var Aurl = '@Session["APIurl"]';
    var UID = '@Session["LoginUserID"]';
    var DecVal = '@Session["DecimalValues"]';
    GetData();
    function GetData() {
        $.ajax({
            url: Aurl + "dailycashexpenses/get",
            type: 'get',
            contentType: 'json',
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                if (data.length > 0) {
                    var accdata = eval(data);
                    Table.draw().clear(); Table.draw().clear();
                    var billjsdata = eval(data);
                    $('#tblMasterFAData').DataTable({
                        pageLength: ItemsperPage, lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                        scrollY: "450px",
                        scrollX: true,
                        scrollCollapse: true,
                        paging: true,
                        destroy: true,
                        data: billjsdata,
                        fixedColumns: false,
                        searching: true,
                        ordering: true,
                        sorting: false,
                        pageLength: ItemsperPage, // default page size
                        lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                        columns: [
                            { "data": "FAID", "autoWidth": true, "visible": false, className: "dt-body-left" },//0
                            {
                                className: "dt-body-center",
                                "mRender": function (data, type, value, meta) {
                                    var rowIndex = (meta.row + 1);
                                    var _action = rowIndex;
                                    return _action;
                                },
                            },
                            { "data": "AccountName", "autoWidth": true, className: "dt-body-left" },//1
                            {
                                className: "dt-body-right",
                                "mRender": function (data, type, value, meta) {
                                    var rowIndex = (meta.row + 1);
                                    var _action = rowIndex;
                                    return '<input type="number" name ="Amount" txttag="0" class="gdInput txtsettag dgvAmount" value="" id="txtAmount' + rowIndex + '"/>';
                                },
                            },
                            {
                                className: "dt-body-left",
                                "mRender": function (data, type, value, meta) {
                                    var rowIndex = (meta.row + 1);
                                    var _action = rowIndex;
                                    return '<input type="text" name ="RefNo" class="gdInput" value="" id="txtRefNo' + rowIndex + '"/>';
                                },
                            },
                            {
                                className: "dt-body-left",
                                "mRender": function (data, type, value, meta) {
                                    var rowIndex = (meta.row + 1);
                                    var _action = rowIndex;
                                    return '<input type="text" name ="Remarks" class="gdInput" value="" id="txtRemarks' + rowIndex + '"/>';
                                },
                            },                            
                        ],

                    });
                    Table = $('#tblMasterFAData').DataTable();                   
                    //$.each(accdata, function (i, items) {
                    //    var rdn = Math.random();
                    //    Table.row.add([
                    //        items.FAID,
                    //        (i+1),
                    //        items.AccountName,
                    //        //'<input type="number" name ="Amount" txttag="0" class="gdInput txtsettag dgvAmount" value="" id="txtAmount' + i + '"/>',
                    //        '<p contenteditable="true"></p>',
                    //        '<input type="text" name ="RefNo" class="gdInput" value="" id="txtRefNo' + i +'"/>',
                    //        '<input type="text" name ="Remarks" class="gdInput" value="" id="txtRemarks' + i +'"/>',
                    //    ]).draw(false);
                    //});
                }
                else {
                    showErrorSnackbar("No Records Found");
                }
            }
            , error: function (data) {
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    ////showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }
    $('#sortOrder').change(function () {
        var direction = $(this).val(); // 'asc' or 'desc'
        Table.order([3, direction]).draw(); // 0 is the column index
    });
    setDate("dtpDate", 0);
    function setDate(FieldID,Type) {
    $.ajax({
         url: "@Url.Action("setdate", "Home")",
        type: 'get',
        contentType: 'json',
        data: { TypeID: Type },
        success: function (data) {
            $.each(data, function (i, items) {
                $("#" + FieldID).attr("max", items.MaxDate);
                $("#" + FieldID).attr("min", items.MinDate);
                $("#" + FieldID).val(items.Value);
            });
        }, error: function (data) {
            if (data.status == "401") {
                var msg = data.responseJSON.Message;
                //showErrorSnackbar(msg + " Logout and Login again.");
            }
        }
    })
    }
    $('input[type=number]').focusin(function (e) {
        $(this).select();
    });
    function SetTagZero() {
        var inputs = $(".txtsettag");
        for (var i = 0; i < inputs.length; i++) {
            var field = $(inputs[i]);
            var FID = field[0].id;
            if (FID != "")
                updateInputColumn(FID, 0);
        }
        inputs = $(".lblsettag");
        for (var i = 0; i < inputs.length; i++) {
            var field = $(inputs[i]);
            var FID = field[0].id;
            if (FID != "") {
                updateLabelColumn(FID, 0);
            }
        }
    }
    $('#tblMasterFAData tbody').on('focusin', 'td>.txtsettag', function (e) {
        // .txtsettag
        var id = e.target.id;
        var name = e.target.name;
        var value = e.target.value;
        //getTagValue(id, name);
        const val = document.getElementById(id).getAttribute("txttag");
        $("#" + id).val(val);
        $("#" + id).select();
        gridchanges = false;
    });
    var batgridchanges = false;
    $('#tblMasterFAData tbody').on('blur', 'td>.txtsettag', function (e) {
        // .txtsettag
        var id = e.target.id;
        var name = e.target.name;
        var value = e.target.value;
        if (!gridchanges)
            updateInputColumn(id, e.target.value);
    });
    function updateLabelColumn(labelID, netValue) {
        //const label = document.getElementById(`dgvProdGross${rowId}`);
        const label = document.getElementById(labelID);
        label.setAttribute('lbltag', netValue.toFixed(4));
        label.innerText = netValue.toFixed(DecVal);
        label.title = netValue.toFixed(4);
    }
    function updateInputColumn(inputID, netValue) {
        //const label = document.getElementById(`dgvProdGross${rowId}`);
        const input = document.getElementById(inputID);
        var value = netValue != "" ? netValue : 0;
        input.setAttribute('txttag', parseFloat(value).toFixed(4));
        input.value = parseFloat(value).toFixed(DecVal);
        input.title = netValue;
    }
    var gridchanges = false;
    $('#tblMasterFAData tbody').on('change', '.dgvAmount', function (e) {
        var TotAmt = 0
        gridchanges = true;
        var id = e.target.id;
        var name = e.target.name;
        var value = e.target.value;
        //showSuccessSnackbar("Value : " + value);
        updateInputColumn(id, e.target.value);
        $("#tblMasterFAData tbody tr").each(function () {
            $(this).find("input").each(function (index) {
                const fieldName = $(this).attr("name");
                const fieldID = $(this).attr("id");                
                if (fieldName == "Amount") {
                    TotAmt += parseFloat($(this).attr("txttag"));
                }
            });
        });
        updateLabelColumn("lblTotal", TotAmt)
    });
    $('#btnClear').click(function (e) {
        if (cfFocus != 3) { ClearConfirmDialogMsg("Do you want to clear?"); } else { ClearForm(); }
    });
    function ClearForm() {
        setDate("dtpDate", 0);
        $(".clrdiv").html("");
        $("#lblTotal").text("0.00");
        GetData();
    }
    var AccArray = [];
    function addAccountsinArray() {
        AccArray = [];
        $("#tblMasterFAData tbody tr").each(function () {
            var allValues = {}, nFAID = 0, Amount = 0, strRefNo = '', strRemark = '';            
            rowdata = Table.row($(this)).data();
            nFAID = rowdata.FAID;//[0];
            $(this).find("input").each(function (index) {
                const fieldName = $(this).attr("name");
                const fieldID = $(this).attr("id");
                if (fieldName == "Amount") {
                    Amount = parseFloat($(this).attr("txttag"));
                }
                if (fieldName == "RefNo") {
                    strRefNo = $(this).val();
                }
                if (fieldName == "Remarks") {
                    strRemark = $(this).val();
                }
            });
            if (Amount > 0) {
                allValues = {
                    "FAID": nFAID,
                    "CollAmt": Amount,
                    "DocRef": strRefNo,
                    "TransName": strRemark
                };
                AccArray.push(allValues);
            }
        });
    }
    $("#btnSave").click(function () {
        $(".clrdiv").html("");
        $("#lblTotal").css("color", "black");
        var IsValid = true;
        if ($("#dtpDate").val() == "") {
            IsValid = false;
            $("#divErrDate").html("Select Date");
            showErrorSnackbar("Select Date");
        }
        var value = document.getElementById("lblTotal").getAttribute("lbltag");
        if (parseFloat(value) <= 0) {
            IsValid = false;
            $("#lblTotal").css("color", "red");
            showErrorSnackbar("Enter value in any one account");
        }        
        if (IsValid) {
            addAccountsinArray();
            if (cfFocus != 3) {
                ConfirmDialogMsg("Do you want to save data?");
            } else {
                SaveData();
            }
        }
    });
    function SaveData() {
        $("#btnSave").prop("disabled", true);
        var lstMaster = {
            "Mode": 1,
            "ID": $("#txtID").val(),
            "DocDate": $("#dtpDate").val(),
            "UserID": UID,
            "lstCollPayDtl": AccArray
        };
        $.ajax({
            url: Aurl + "dailycashexpenses/save",
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(lstMaster),
            cache: false,
            processData: false,
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                $("#btnSave").prop("disabled", false);
                $.each(data, function (i, items) {
                    if (items.MsgID == 0) {
                        ClearForm();
                        showSuccessSnackbar(items.Message);
                    }
                    else {
                        $("#dvErrorName").html(items.Message);
                        showErrorSnackbar(items.Message);
                        //alert(items.Message);
                    }
                });
            },
            error: function (data) {
                $("#btnSave").prop("disabled", false);
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    ////showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }    
</script>