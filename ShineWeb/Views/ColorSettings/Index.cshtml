@model ShineWeb.Models.SingleMasterModel
@{
    ViewBag.Title = ViewData["FormName"];
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/navbar.css" rel="stylesheet" />
<link href="~/Content/buttonTop.css" rel="stylesheet" />
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap-typeahead.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script src="~/Scripts/Validation.js"></script>
<script src="~/Scripts/js/refreshtoken.js"></script>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --glass-bg: rgba(255, 255, 255, 0.9);
        --glass-border: rgba(255, 255, 255, 0.2);
        --card-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        --transition-speed: 0.3s;
    }

    body {
        background: #f4f7f6;
        font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        color: #2d3436;
        padding: 20px;
    }

    #MainHeading {
        font-weight: 800;
        letter-spacing: -0.5px;
        color: #2d3436;
        margin-bottom: 5px;
        font-size: 2rem;
    }

    .subtitle {
        color: #636e72;
        margin-bottom: 1px;
        font-weight: 400;
    }

    .main-container {
        display: flex;
        gap: 25px;
        flex-wrap: wrap;
    }

    .settings-panel {
        flex: 1;
        min-width: 400px;
    }

    .preview-panel {
        flex: 1.5;
        min-width: 500px;
        position: sticky;
        top: 20px;
        height: fit-content;
    }

    .card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        padding: 24px;
        margin-bottom: 20px;
        backdrop-filter: blur(4px);
        transition: transform var(--transition-speed);
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #edf2f7;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #4a5568;
    }

    .color-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 15px;
    }

    .color-input-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .color-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #718096;
    }

    .color-picker-wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 8px 12px;
        transition: border-color 0.2s;
    }

    .color-picker-wrapper:hover {
        border-color: #cbd5e0;
    }

    input[type="color"] {
        -webkit-appearance: none;
        border: none;
        width: 32px;
        height: 32px;
        cursor: pointer;
        background: none;
        padding: 0;
    }

    input[type="color"]::-webkit-color-swatch-wrapper {
        padding: 0;
    }

    input[type="color"]::-webkit-color-swatch {
        border: 2px solid #fff;
        border-radius: 50%;
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    .theme-select-row {
        display: flex;
        gap: 15px;
        align-items: flex-end;
        margin-bottom: 25px;
    }

    select.form-control {
        height: 45px;
        border-radius: 10px;
        font-weight: 500;
        border-color: #e2e8f0;
    }

    .action-bar {
        position: fixed;
        bottom: 30px;
        right: 30px;
        display: flex;
        gap: 12px;
        background: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 50px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        backdrop-filter: blur(10px);
        z-index: 1000;
    }

    .btn-modern {
        padding: 10px 24px;
        border-radius: 50px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
        border: none;
    }

    .btn-modern:active {
        transform: scale(0.95);
    }

    .btn-modern.save { background: #2ecc71; color: white; }
    .btn-modern.save:hover { background: #27ae60; box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3); }
    
    .btn-modern.reset { background: #e74c3c; color: white; }
    .btn-modern.reset:hover { background: #c0392b; box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3); }

    .btn-modern.load { background: #3498db; color: white; border-radius: 10px; height: 45px; }

    /* Preview Section Enhancements */
    #dashboard-preview {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #edf2f7;
    }

    .preview-header {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        transition: background-color 0.3s;
    }

    .preview-body {
        padding: 20px;
    }

    .preview-grid-header {
        transition: background-color 0.3s, color 0.3s;
    }

    .preview-btn-group {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: 15px;
    }

    .preview-btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        border: none;
        color: white;
        transition: opacity 0.2s;
    }

    .preview-autocomplete {
        width: 250px;
        border-radius: 8px;
        padding: 10px;
        margin-top: 20px;
    }

    .toast-modern {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        padding: 12px 25px;
        border-radius: 50px;
        color: white;
        background: #2d3436;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        z-index: 9999;
        display: none;
        font-weight: 600;
    }

    [hidden] { display: none !important; }
</style>

<body>
    <div class="toast-modern" id="modern-toast"></div>
    <div class="toastBox"></div>
    <div class="container-fluid">
        @Html.HiddenFor(model => model.FormName, new { @autocomplete = "off", @class = "form-control", @id = "txtFormName" })
        @Html.HiddenFor(model => model.ID, new { @autocomplete = "off", @class = "form-control FormclrField", @id = "txtID" })

        <div class="row mb-4">
            <div class="col-12">
                <h1 id="MainHeading">@ViewData["FormName"]</h1>
                <p class="subtitle">Customize your workspace colors and theme settings.</p>
            </div>
        </div>

        <div class="main-container">
            <!-- Settings Panel -->
            <div class="settings-panel">
                <div class="card theme-card">
                    <div class="section-title"><i class="fas fa-palette"></i> Theme Selection</div>
                    <div class="theme-select-row">
                        <div style="flex: 1;">
                            <label class="color-label">Current Theme</label>
                            <select id="cmbThemes" class="form-control">
                                <option value="0">Shine Web (Default)</option>
                                <option value="1">Custom Theme</option>
                            </select>
                        </div>
                        <button class="btn-modern load" id="btnLoad"><i class="fas fa-sync"></i> Load</button>
                    </div>
                </div>

                <div class="card trClrEnableChange">
                    <div class="section-title"><i class="fas fa-window-maximize"></i> Header & Navigation</div>
                    <div class="color-grid">
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtMenuHeader" /> Menu Header BG
                            </div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtCompanyName" /> Company Name
                            </div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtMenuText" /> Menu Text
                            </div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtSubMenuText" /> Sub Menu Text
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card trClrEnableChange">
                    <div class="section-title"><i class="fas fa-table"></i> Data Grid Styling</div>
                    <div class="color-grid">
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtGridHeaderBG" /> Header Background
                            </div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper">
                                <input type="color" id="txtGridHeaderText" /> Header Text
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card trClrEnableChange">
                    <div class="section-title"><i class="fas fa-mouse-pointer"></i> Interaction & Buttons</div>
                    <div class="color-grid">
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtAddBtn" /> Add Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtSaveBtn" /> Save Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtDraftBtn" /> Draft Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtClearBtn" /> Clear Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtCloseBtn" /> Close Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtPDFBtn" /> PDF Button</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtPreviewBtn" /> Preview Button</div>
                        </div>
                    </div>
                </div>

                <div class="card trClrEnableChange">
                    <div class="section-title"><i class="fas fa-external-link-alt"></i> Popups & Autocomplete</div>
                    <div class="color-grid">
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtPopupheader" /> Popup Header</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtPopupheadertext" /> Popup Header Text</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtPopupfooter" /> Popup Footer</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtAutoCompleteBG" /> Autocomplete BG</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtAutoCompleteLine1" /> Autocomplete Line 1</div>
                        </div>
                        <div class="color-input-group">
                            <div class="color-picker-wrapper"><input type="color" id="txtAutoCompleteLine2" /> Autocomplete Line 2</div>
                        </div>
                    </div>
                </div>

                <div style="display:none">
                    <input id="txtConfPopYes" type="color" />
                    <input id="txtConfPopNo" type="color" />
                </div>
            </div>

            <!-- Preview Panel -->
            <div class="preview-panel">
                <div class="card" style="position: sticky; top: 20px;">
                    <div class="section-title"><i class="fas fa-eye"></i> Real-time Preview</div>

                    <div id="dashboard-preview">
                        <!-- Simulated Navigation Header -->
                        <div id="dvHeaderMenu" class="preview-header">
                            <div>
                                <span id="pCompName" style="font-weight: 800; font-size: 1.2rem;">Shine Web</span>
                                <span style="margin-left: 15px; font-weight: 500; opacity: 0.9;">Main Menu</span>
                            </div>
                            <div id="dvHeaderSubMenu" style="font-size: 0.85rem;">
                                <i class="fas fa-chevron-right" style="font-size: 0.7rem; margin-right: 5px;"></i> Sub Menu Item
                            </div>
                        </div>

                        <div class="preview-body">
                            <!-- Simulated Grid -->
                            <table class="table table-bordered mb-4" style="border-radius: 8px; overflow: hidden;">
                                <thead id="trGridHeader" class="preview-grid-header">
                                    <tr>
                                        <th class="text-center p-3">Category</th>
                                        <th class="text-center p-3">Description</th>
                                        <th class="text-center p-3">Amount</th>
                                        <th class="text-center p-3">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="background: #fff;">
                                        <td class="p-3">Sample Item</td>
                                        <td class="p-3">Modern UI Preview</td>
                                        <td class="p-3">1200.00</td>
                                        <td class="p-3"><span class="badge bg-success">Active</span></td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Simulated Autocomplete -->
                            <div id="dvAutoComplete" class="preview-autocomplete">
                                <div id="lblAutoCompleteLine1" style="font-weight: 700; font-size: 0.9rem;">Search Result Title</div>
                                <div id="lblAutoCompleteLine2" style="font-size: 0.75rem; opacity: 0.8;">Detailed description goes here...</div>
                            </div>

                            <!-- Simulated Popup Sample -->
                            <div class="mt-5" style="border: 1px solid #e2e8f0; border-radius: 12px; overflow: hidden;">
                                <div id="dvPopHeader" style="padding: 12px 20px; font-weight: 700;">Sample Dialog Header</div>
                                <div style="padding: 20px; background: #fbfbfb; font-size: 0.85rem; color: #718096;">
                                    This is how your application popups and footer buttons will look.
                                </div>
                                <div id="dvPopFooter" style="padding: 12px 20px; display: flex; justify-content: flex-end; gap: 8px;">
                                    <button class="preview-btn clrforclear">Cancel</button>
                                    <button class="preview-btn clrforsave">Action</button>
                                    <button class="preview-btn clrforclose">Close</button>
                                </div>
                            </div>

                            <!-- All Buttons Row -->
                            <div class="section-title mt-5" style="font-size: 0.9rem;"><i class="fas fa-keyboard"></i> Button Variants</div>
                            <div class="preview-btn-group">
                                <button class="preview-btn clrforadd">Add New</button>
                                <button class="preview-btn clrforpdf">Export PDF</button>
                                <button class="preview-btn clrforpreview">Print Preview</button>
                                <button class="preview-btn clrforclear">Clear All</button>
                                <button class="preview-btn clrfordraft">Save Draft</button>
                                <button class="preview-btn clrforsave">Final Save</button>
                                <button class="preview-btn clrforclose">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Action Bar -->
    <div class="action-bar">
        <button type="button" class="btn-modern reset" id="btnClear"><i class="fas fa-undo"></i> Reset</button>
        <button type="button" class="btn-modern save" id="btnSave"><i class="fas fa-check"></i> Save Changes</button>
    </div>

    <script type="text/javascript">
        var Aurl = '@Session["APIurl"]';
        var nUID = '@Session["LoginUserID"]';
        var TID = '@Session["ThemeID"]';

        // Utility for modern feedback
        function showNotification(msg, type) {
            const toast = $("#modern-toast");
            toast.text(msg).css("background", type === "success" ? "#2ecc71" : "#e74c3c").fadeIn();
            setTimeout(() => toast.fadeOut(), 3000);
        }

        $(".trClrEnableChange").hide();

        // Event Bindings for live preview updates (maintaining original IDs)
        $("#txtCompanyName").on('input', function(e) { $("#pCompName").css("color", e.target.value); });
        $("#txtMenuHeader").on('input', function(e) { $("#dvHeaderMenu").css("background-color", e.target.value); });
        $("#txtGridHeaderText").on('input', function(e) { $("#trGridHeader").css("color", e.target.value); });
        $("#txtGridHeaderBG").on('input', function(e) { $("#trGridHeader").css("background-color", e.target.value); });
        $("#txtMenuText").on('input', function(e) { $("#dvHeaderMenu, #pCompName").css("color", e.target.value); });
        $("#txtSubMenuText").on('input', function(e) { $("#dvHeaderSubMenu").css("color", e.target.value); });
        $("#txtPopupfooter").on('input', function(e) { $("#dvPopFooter").css("background-color", e.target.value); });
        $("#txtPopupheader").on('input', function(e) { $("#dvPopHeader").css("background-color", e.target.value); });
        $("#txtPopupheadertext").on('input', function(e) { $("#dvPopHeader").css("color", e.target.value); });

        $("#txtAddBtn").on('input', function(e) { $(".clrforadd").css("background-color", e.target.value); });
        $("#txtSaveBtn").on('input', function(e) { $(".clrforsave").css("background-color", e.target.value); });
        $("#txtDraftBtn").on('input', function(e) { $(".clrfordraft").css("background-color", e.target.value); });
        $("#txtClearBtn").on('input', function(e) { $(".clrforclear").css("background-color", e.target.value); });
        $("#txtCloseBtn").on('input', function(e) { $(".clrforclose").css("background-color", e.target.value); });
        $("#txtPDFBtn").on('input', function(e) { $(".clrforpdf").css("background-color", e.target.value); });
        $("#txtPreviewBtn").on('input', function(e) { $(".clrforpreview").css("background-color", e.target.value); });

        $("#txtAutoCompleteBG").on('input', function(e) { $("#dvAutoComplete").css("background-color", e.target.value); });
        $("#txtAutoCompleteLine1").on('input', function(e) { $("#lblAutoCompleteLine1").css("color", e.target.value); });
        $("#txtAutoCompleteLine2").on('input', function(e) { $("#lblAutoCompleteLine2").css("color", e.target.value); });

        // Logic for enabling/disabling controls based on user/theme (Preserved)
        function updateControlVisibility() {
            var selectedTheme = $("#cmbThemes").val();
            if (nUID == 1 || selectedTheme > 0) {
                $(".trClrEnableChange").show();
            } else {
                $(".trClrEnableChange").hide();
            }
        }

        $("#cmbThemes").change(function() {
            updateControlVisibility();
        });

        $("#btnLoad").click(function() {
            GetData(1, $("#cmbThemes").val());
            showNotification("Theme preferences reloaded", "success");
        });

        // Initial update
        $("#cmbThemes").val(TID);
        GetData(1, TID);
        updateControlVisibility();

        function GetData(nMode, strName = null) {
            $.ajax({
                url: Aurl + "colorsettings/get",
                type: 'get',
                contentType: 'json',
                data: { Mode: nMode, Name: strName },
                xhrFields: { withCredentials: true },
                success: function (data) {
                    if (nMode == 1) {
                        $.each(data, function (i, items) {
                            // Update input values and trigger live preview
                            $("#txtCompanyName").val(items.CompanyNameColor).trigger('input');
                            $("#txtMenuHeader").val(items.MenuHeader).trigger('input');
                            $("#txtSubMenuText").val(items.SubMenuColor).trigger('input');
                            $("#txtMenuText").val(items.MenuColor).trigger('input');
                            $("#txtAddBtn").val(items.AddButton).trigger('input');
                            $("#txtSaveBtn").val(items.SaveButton).trigger('input');
                            $("#txtDraftBtn").val(items.DraftButton).trigger('input');
                            $("#txtClearBtn").val(items.ClearButton).trigger('input');
                            $("#txtCloseBtn").val(items.CloseButton).trigger('input');
                            $("#txtPDFBtn").val(items.PDFButton).trigger('input');
                            $("#txtPreviewBtn").val(items.PreviewButton).trigger('input');
                            $("#txtPopupheader").val(items.PopupHeader).trigger('input');
                            $("#txtPopupfooter").val(items.PopupFooter).trigger('input');
                            $("#txtConfPopYes").val(items.ConfirmPopupYes);
                            $("#txtConfPopNo").val(items.ConfirmPopupNo);
                            $("#txtGridHeaderBG").val(items.GridHeaderBackGround).trigger('input');
                            $("#txtGridHeaderText").val(items.GridHeaderTextColor).trigger('input');
                            $("#txtPopupheadertext").val(items.PopupHeaderText).trigger('input');
                            $("#txtAutoCompleteBG").val(items.AutocompleteBG).trigger('input');
                            $("#txtAutoCompleteLine1").val(items.AutocompleteLine1).trigger('input');
                            $("#txtAutoCompleteLine2").val(items.AutocompleteLine2).trigger('input');
                        });
                    }
                },
                error: function (data) {
                    if (data.status == "401") {
                        //showNotification("Session expired. Please log in again.", "error");
                    }
                }
            });
        }

        function SaveData() {
            $("#btnSave").prop("disabled", true).html('<i class="fas fa-spinner fa-spin"></i> Saving...');
            var lstMaster = {
                "ThemeID": $("#cmbThemes").val(),
                "UID": nUID,
                "MenuHeader": $("#txtMenuHeader").val(),
                "SubMenuColor": $("#txtSubMenuText").val(),
                "AddButton": $("#txtAddBtn").val(),
                "SaveButton": $("#txtSaveBtn").val(),
                "ClearButton": $("#txtClearBtn").val(),
                "CloseButton": $("#txtCloseBtn").val(),
                "PDFButton": $("#txtPDFBtn").val(),
                "PreviewButton": $("#txtPreviewBtn").val(),
                "PopupHeader": $("#txtPopupheader").val(),
                "PopupFooter": $("#txtPopupfooter").val(),
                "ConfirmPopupYes": $("#txtConfPopYes").val(),
                "ConfirmPopupNo": $("#txtConfPopNo").val(),
                "MenuColor": $("#txtMenuText").val(),
                "CompanyNameColor": $("#txtCompanyName").val(),
                "GridHeaderBackGround": $("#txtGridHeaderBG").val(),
                "GridHeaderTextColor": $("#txtGridHeaderText").val(),
                "PopupHeaderText": $("#txtPopupheadertext").val(),
                "AutocompleteBG": $("#txtAutoCompleteBG").val(),
                "AutocompleteLine1": $("#txtAutoCompleteLine1").val(),
                "AutocompleteLine2": $("#txtAutoCompleteLine2").val(),
                "DraftButton": $("#txtDraftBtn").val(),
            }

            $.ajax({
                url: Aurl + "colorsettings/save",
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(lstMaster),
                cache: false,
                processData: false,
                xhrFields: { withCredentials: true },
                success: function (data) {
                    $("#btnSave").prop("disabled", false).html('<i class="fas fa-check"></i> Save Changes');
                    $.each(data, function (i, items) {
                        if (items.MsgID == 0) {
                            //showNotification(items.Message, "success");
                            showSuccessSnackbar(items.Message);
                        } else {
                            //showNotification(items.Message, "error");
                            showErrorSnackbar(items.Message);
                        }
                    });
                },
                error: function (data) {
                    $("#btnSave").prop("disabled", false).html('<i class="fas fa-check"></i> Save Changes');
                    showNotification("Error saving theme", "error");
                }
            });
        }

        // Action Handlers
        function ClearForm() {
            GetData(1, $("#cmbThemes").val());
            showNotification("Defaults restored", "success");
        }
        $('#btnClear').click(function () {
            if (cfFocus != 3) { ClearConfirmDialogMsg("Do you want to clear?"); } else {
                ClearForm()  }
        });

        $("#btnSave").click(function () {
