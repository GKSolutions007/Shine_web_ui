    });
    $(".trItemName").prop("disabled", true);
    var UID = '@Session["LoginUserID"]';
    var Aurl = '@Session["APIurl"]';
    var DecVal = '@Session["DecimalValues"]';
    var DefBranch = '@Session["DefaultBranch"]';
    var BatchMode = 0;
    var nTransMode = 1, nIsDraft = 0;
    var qtyonly = $("#chkQtyonly").is(":checked") ? 1 : 0;
    //GetData(1);
    var RtnDisp = 1;
    if ($("#txtReurnPricePerm").val() == 0) {
        RtnDisp = 0;
    }
    $('input[type=number]').focusin(function (e) {
        $(this).select();
    });

        function SetTagZero() {
        var inputs = $(".txtsettag");
        for (var i = 0; i < inputs.length; i++) {
            var field = $(inputs[i]);
            var FID = field[0].id;
            updateInputColumn(FID, "0");
        }
    }
function updateInputColumn(inputID, netValue) {
    //const label = document.getElementById(`dgvProdGross${rowId}`);
    const input = document.getElementById(inputID);
    var value = netValue != "" ? netValue : 0;
    input.setAttribute('txttag', parseFloat(value).toFixed(4));
    input.value = parseFloat(value).toFixed(DecVal);
    input.title = netValue;
    }
    function updateLabelColumn(labelID, netValue) {
        //const label = document.getElementById(`dgvProdGross${rowId}`);
        const input = document.getElementById(labelID);
        var value = netValue != "" ? netValue : 0;
        input.setAttribute('lbltag', parseFloat(value).toFixed(4));
        input.innerText = parseFloat(value).toFixed(DecVal);
        input.title = netValue;
    }
    $(".txtsettag").focusin(function (e) {
        var id = e.target.id;
        const val = document.getElementById(id).getAttribute("txttag");
        $("#" + id).val(val);
        $("#" + id).select();
    });
    $(".txtsettag").blur(function (e) {
        var val = e.target.value;
        var id = e.target.id;
        updateInputColumn(id, val);
    });
    $('#tblProductData tbody').on('focusin', 'td>.txtsettag', function (e) {
        // .clsdgvTag
        var id = e.target.id;
        var name = e.target.name;
        var value = e.target.value;
        //getTagValue(id, name);
        const val = document.getElementById(id).getAttribute("txttag");
        $("#" + id).val(val);
        $("#" + id).select();
        batgridchanges = false;
    });
    var batgridchanges = false;
    $('#tblProductData tbody').on('blur', 'td>.txtsettag', function (e) {
        // .clsdgvTag
        var id = e.target.id;
        var name = e.target.name;
        var value = e.target.value;
        //setTagValue(id, name, value);
        if (!batgridchanges) {
            updateInputColumn(id, e.target.value);
        }
        //CalculateBatchGrid();
    });
    var BatchRID = 0, ProductRID = 0;

    function ReorderSerialNo() {
        var sNo = 0;
        $("#tblProductData tbody tr").each(function () {
            $(this).find("p").each(function (index) {
                vals = (sNo + 1);
                $(this).text(vals);
            });
            sNo++;
        });
        //$("#tblProductData").DataTable().ajax.reload();
    }
    $("#tblProductData").change(function (e) {
        var id = e.target.id;
        var name = e.target.name;
        var val = e.target.value;
        var inptype = e.target.type;
        batgridchanges = true;
        if (name != "BatchNo" && name != "PKD" && name != "Expiry" && name != "CheckBatch" && name != "MRP")
        {
            updateInputColumn(id, val);
        }
        if (name == "CheckBatch")
        {
            $("#tblProductData tbody tr").each(function () {
                var allValues = {};
                var chk = true;
                $(this).find("input").each(function (index) {
                    const fieldName = $(this).attr("name");
                    if (fieldName == "CheckBatch") {
                        chk = $(this).is(":checked")//.val();
                    }
                    else
                    {
                        if (fieldName != "PurchasePrice" && fieldName != "ActQty" && fieldName != "ReturnPrice" && fieldName != "MRPExcl") {
                            $(this).prop("disabled", !chk);
                        } else if (fieldName == "ReturnPrice" && RtnDisp == 1) {
                            $(this).prop("disabled", !chk);
                        }
                    }
                });
            });
        }
    });
    //
    $('#tblProductData tbody').on('change', '.dgvProdMRP', function (e) {
        var id = e.target.id;
        var name = e.target.name;
        var val = e.target.value;
        var inptype = e.target.type;
        var TaxPern = parseFloat($('#txtHTaxPern').val());
        var TP = (TaxPern / 100) + 1;
        batgridchanges = true;
        var currrowdata = ProductTable.row(nCurrentRowIndex).data();
        var CurrRowInvID = currrowdata[0];
        $("#tblProductData tbody tr").each(function () {
            var rowdata = ProductTable.row($(this)).data();
            var GridInvID = rowdata[0];
            var InclMRP = 0;
            if (CurrRowInvID == GridInvID) {
                $(this).find("input").each(function (index) {
                    const fieldName = $(this).attr("name");
                    const fieldID = $(this).attr("id");
                    if (fieldName == "MRP") {
                        InclMRP = val;
                        updateInputColumn(fieldID, val);
                        //return true;
                    }
                    if (fieldName == "MRPExcl") {
                        var ExclMrp = InclMRP / TP;
                        updateInputColumn(fieldID, ExclMrp);
                    }
                });
            }
        });

    });
    function Scrolltoid(id) {
        window.scrollTo({ left: 0, top: document.body.scrollHeight, behavior: "smooth" });

    }

    var nCurrentRowIndex = -1;
    $('#tblProductData tbody').on('focusin', 'tr', function () {
        nCurrentRowIndex = ProductTable.row(this).index()
    });

    var EditRowID = -1;
    $('#txtTaxName,#txtUOMName').prop("disabled", true);
    $("#trFooter").hide();
    var EditRowID = -1;
    GetData(1, "");
    var arrProdCode = [], arrProdName = [], arrProdCodeName = [], TempProd = [], TempBatch = [];
    var nIndexarrProdCode = 0, nIndexarrProdName = 0, nIndexarrProdCodeName = 0;
    var prodids = 0;
    function GetData(nMode, strID = null) {
        $.ajax({
            url: Aurl + "productpricechange/get",
            type: 'get',
            contentType: 'json',
            data: { Mode: nMode, BranchID: $("#cmbBranch").val(), ProdID: strID },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                if (nMode == 1) {
                    TempAL = [];
                    $('#cmbBranch').find("option").remove();
                    $('#cmbBranch').append($('<option/>', {
                        value: 0,
                        text: "-- Select --",
                    }));
                    $.each(data, function (i, items) {
                        if (items.FType == 1) {
                            $('#cmbBranch').append($('<option/>', {
                                value: items.ID,
                                text: items.Name,
                            }));
                        }
                        if (items.FType == 2) {
                            var al = {
                                "label": items.Code + " | " + items.Name,
                                "name": items.Name,
                                "code": items.Code,
                                "id": items.ID,
                            }
                            TempAL.push(al);
                        }
                    });
                    $("#cmbBranch").val(DefBranch);
                    $("#txtProdName").autocomplete({
                        minLength: 0, autoFocus: true,
                        source: TempAL,
                        select: function (event, ui) {
                            $("#txtProdName").val(ui.item.Name);
                            $("#txtHProdID").val(ui.item.id);
                            if ($("#cmbBranch").val() > 0) {
                                //var qtyonly = $("#chkQtyonly").is(":checked") ? 1 : 0;
                                GetData(3, ui.item.id);
                            }
                            else {
                                showErrorSnackbar("Select Branch");
                                $('#txtProdName').val("");
                                $("#cmbBranch").focus();
                            }
                            return false;
                        },
                    }).autocomplete("instance")._renderItem = function (ul, item) {
                        return $("<li class='each'>")
                            .append("<div class='acItem'><span class='name'>" +
                                item.label + "</span><br><span class='desc'>")
                            .appendTo(ul);
                        };
                    if (TempAL.length == 0) {
                        $("#divErrProduct").html("No Items/Stock found in this branch");
                        showErrorSnackbar("No Items/Stock found in this branch");
                    } else {
                        $("#divErrProduct").html("");
                    }
                }
                else if (nMode == 2) {
                    TempAL = [];
                    //if (data.length > 0)
                    {
                        var tpn = "";
                        $.each(data, function (i, items) {
                            //arrProdCode[i] = items.Code;
                            //arrProdName[i] = items.Name;
                            //arrProdCodeName[i] = items.Code + "|" + items.Name;
                            //tpn = items.Name;
                            var al = {
                                "label": items.Value + " | " + items.Name,
                                "name": items.Name,
                                "code": items.Value,
                                "id": items.ID,
                            }
                            TempAL.push(al);
                        });
                        $("#txtProdName").autocomplete({
                            minLength: 0, autoFocus: true,
                            source: TempAL,
                            select: function (event, ui) {
                                $("#txtProdName").val(ui.item.Name);
                                $("#txtHProdID").val(ui.item.id);

                                if ($("#cmbBranch").val() > 0) {
                                    //var qtyonly = $("#chkQtyonly").is(":checked") ? 1 : 0;
                                    GetData(3, ui.item.id);
                                }
                                else {
                                    showErrorSnackbar("Select Branch");
                                    $('#txtProdName').val("");
                                    $("#cmbBranch").focus();
                                }
                                return false;
                            },
                        }).autocomplete("instance")._renderItem = function (ul, item) {
                            return $("<li class='each'>")
                                .append("<div class='acItem'><span class='name'>" +
                                    item.label + "</span><br><span class='desc'>")
                                .appendTo(ul);
                        };
                    }
                    if (TempAL.length == 0) {
                        $("#divErrProduct").html("No Items/Stock found in this branch");
                        showErrorSnackbar("No Items/Stock found in this branch");
                    } else {
                        $("#divErrProduct").html("");
                    }
                }
                else if (nMode == 3) {
                    ProductTable.draw().clear();
                    ProductRID = 0;
