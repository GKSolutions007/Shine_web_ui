@model ShineWeb.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShineWeb - Login & Registration</title>
    <link rel="SHORTCUT ICON" href="~/images/G_large_Transparent.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/bootstrap-glyphicons.css">
    <link href="~/Content/Snackbar.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Validation.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <style>
        :root {
            --primary-color: #6a11cb;
            --secondary-color: #2575fc;
            --accent-color: #6a11cb;
            --accent-secondary: #2575fc;
            --text-color: #333;
            --light-text: #666;
            --white: #ffffff;
            --glass-bg: rgba(255, 255, 255, 0.85);
            --glass-border: rgba(255, 255, 255, 0.4);
            --shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
            overflow-y: auto;
        }

        .login-container {
            width: 100%;
            max-width: 480px;
            padding: 20px;
            z-index: 1;
            margin: auto;
        }

        .login-card {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            box-shadow: var(--shadow);
            padding: 10px 40px 10px 40px;
            position: relative;
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 5px;
        }

            .brand-logo img {
                height: 70px;
                width: auto;
                filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
            }

        .tabs-header {
            display: flex;
            margin-bottom: 10px;
            border-bottom: 2px solid rgba(0,0,0,0.05);
            position: relative;
        }

        .tab-input {
            display: none;
        }

        .tab-btn {
            flex: 1;
            text-align: center;
            padding: 12px;
            cursor: pointer;
            font-weight: 700;
            color: var(--light-text);
            transition: all 0.3s ease;
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 1.5px;
        }

        #tab-1:checked ~ .login-card .tabs-header .tab-btn[for="tab-1"],
        #tab-2:checked ~ .login-card .tabs-header .tab-btn[for="tab-2"] {
            color: var(--primary-color);
        }

        .tab-indicator {
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 50%;
            height: 2px;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        #tab-1:checked ~ .login-card .tabs-header .tab-indicator {
            transform: translateX(0);
        }

        #tab-2:checked ~ .login-card .tabs-header .tab-indicator {
            transform: translateX(100%);
        }

        .form-body {
            position: relative;
        }

        .auth-panel {
            display: none;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        #tab-1:checked ~ .login-card .form-body .sign-in-panel,
        #tab-2:checked ~ .login-card .form-body .sign-up-panel {
            display: block;
            opacity: 1;
            animation: fadeIn 0.4s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .field-group {
            margin-bottom: 5px;
        }

            .field-group label {
                display: block;
                font-size: 10px;
                font-weight: 700;
                color: #555;
                margin-bottom: 4px;
                text-transform: uppercase;
                letter-spacing: 0.8px;
            }

        .input-box {
            position: relative;
            display: flex;
            align-items: center;
        }

            .input-box i {
                position: absolute;
                left: 14px;
                color: #aaa;
                font-size: 13px;
                transition: color 0.3s;
            }

            .input-box .form-control-custom {
                width: 100%;
                padding: 8px 12px 8px 38px;
                border: 1px solid rgba(0,0,0,0.1);
                border-radius: 10px;
                background: white;
                font-size: 13px;
                transition: all 0.3s;
                outline: none;
            }

                .input-box .form-control-custom:focus {
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 4px rgba(106, 17, 203, 0.1);
                }

                    .input-box .form-control-custom:focus + i {
                        color: var(--primary-color);
                    }

        .action-btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 10px;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            color: white;
            font-weight: 700;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(106, 17, 203, 0.2);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 5px;
        }

            .action-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(106, 17, 203, 0.4);
            }

        .helper-links {
            text-align: center;
            margin-top: 25px;
        }

            .helper-links a {
                color: var(--light-text);
                font-size: 13px;
                text-decoration: none;
                font-weight: 500;
            }

                .helper-links a:hover {
                    color: var(--primary-color);
                }

        .error-label {
            color: #e84118;
            font-size: 11px;
            margin-top: 4px;
            font-weight: 500;
            min-height: 15px;
        }

        .success-msg {
            color: #44bd32;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
            font-size: 13px;
        }

        /* Modal Overhaul */
        .modal-overlay {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            backdrop-filter: blur(4px);
            align-items: center;
            justify-content: center;
        }

        .modalBatch-content {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            animation: zoomIn 0.3s ease;
            margin: auto;
        }

        

        @@keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .modal-header-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
        }

        .close-modal {
            font-size: 20px;
            cursor: pointer;
            color: #888;
        }

        .floating-field {
            position: relative;
            margin-bottom: 0px;
        }

            .floating-field input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 12px;
                outline: none;
                font-size: 14px;
            }

            .floating-field label {
                position: absolute;
                left: 14px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
                transition: all 0.2s;
                pointer-events: none;
                background: white;
                padding: 0 4px;
                font-size: 14px;
            }

            .floating-field input:focus + label,
            .floating-field input:not(:placeholder-shown) + label {
                top: 0;
                font-size: 11px;
                color: var(--primary-color);
                font-weight: 700;
            }

            .floating-field input:focus {
                border-color: var(--primary-color);
            }

        .toast-container {
            position: fixed;
            top: 25px;
            right: 25px;
            z-index: 3000;
        }
        #loadingDiv {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 150%;
            opacity: 90%;
            z-index : 10000;
            background-color: #C7E1BA;
        }

        .LoaderMsg {
            padding:12%;
            font-size: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="toast-container toastBox"></div>

    <div class="login-container">
        <input id="tab-1" type="radio" name="tab" class="tab-input" checked>
        <input id="tab-2" type="radio" name="tab" class="tab-input">

        <div class="login-card">
            <div class="brand-logo">
                <img src="~/Images/G_large_Transparent.png" alt="ShineWeb Logo" />
            </div>

            <div class="tabs-header">
                <label for="tab-1" class="tab-btn">Sign In</label>
                <label for="tab-2" class="tab-btn">Sign Up</label>
                <div class="tab-indicator"></div>
            </div>

            <div class="form-body">
                <!-- Sign In Panel -->
                <div class="auth-panel sign-in-panel">
                    @if (ViewData["AlertMessage"] != null)
                    {
                        <div class="success-msg">@ViewData["AlertMessage"]</div>
                    }

                    <div class="field-group">
                        <label>Company Code</label>
                        <div class="input-box">
                            <i class="fa-solid fa-building-user"></i>
                            <select tabindex="1" class="form-control-custom" id="cmbLoginCC" style="color:black">
                                <option value="0">@ViewData["companycode"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="field-group" hidden>
                        <label>Company Name</label>
                        <div class="input-box">
                            <i class="fa-solid fa-id-card"></i>
                            @Html.TextBoxFor(model => model.CompanyName, new { @autocomplete = "off", @class = "form-control-custom", @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="field-group">
                        <label>Username</label>
                        <div class="input-box">
                            <i class="fa-solid fa-user-tie"></i>
                            <input tabindex="2" id="txtUserName" type="text" class="form-control-custom" placeholder="Enter username" autofocus>
                        </div>
                        @*<div id="divErrorOnLoginuser" class="error-label"></div>*@
                    </div>

                    <div class="field-group">
                        <label>Password</label>
                        <div class="input-box">
                            <i class="fa-solid fa-key"></i>
                            <input tabindex="3" id="txtPassword" type="password" class="form-control-custom" placeholder="Enter password" data-type="password">
                        </div>
                        @*<div id="divErrorOnLoginpassword" class="error-label"></div>*@
                    </div>

                    <button tabindex="4" type="submit" class="action-btn" onclick="Login()">Sign In</button>

                    <div class="helper-links">
                        <a href="javascript:void(0)" id="FGhref">Forgot Password?</a>
                    </div>
                </div>

                <!-- Sign Up Panel -->
                <div class="auth-panel sign-up-panel">
                    <div class="field-group">
                        <label>Company Code</label>
                        <div class="input-box">
                            <i class="fa-solid fa-building-circle-check"></i>
                            <select tabindex="5" class="form-control-custom" id="cmbLoginSU" style="color:black">
                                <option value="0">@ViewData["companycode"]</option>
                            </select>
                        </div>
                    </div>

                    <div class="field-group">
                        <label>Username</label>
                        <div class="input-box">
                            <i class="fa-solid fa-user-plus"></i>
                            <input tabindex="6" id="Signupuser" type="text" class="form-control-custom" placeholder="Username">
                        </div>
                        <div id="divErrorOnSignupuser" class="error-label"></div>
                    </div>

                    <div class="field-group">
                        <label>Password</label>
                        <div class="input-box">
                            <i class="fa-solid fa-fingerprint"></i>
                            <input tabindex="7" id="Signuppassword" type="password" class="form-control-custom" placeholder="Password" data-type="password">
                        </div>
                        <div id="divErrorOnSignuppassword" class="error-label"></div>
                    </div>

                    <div class="field-group">
                        <label>Repeat Password</label>
                        <div class="input-box">
                            <i class="fa-solid fa-lock-open"></i>
                            <input tabindex="8" id="SignupConfirmpassword" type="password" class="form-control-custom" placeholder="Confirm Password" data-type="password">
                        </div>
                        <div id="divErrorOnSignupConfirmpassword" class="error-label"></div>
                    </div>

                    <div class="field-group">
                        <label>Email Address</label>
                        <div class="input-box">
                            <i class="fa-solid fa-envelope-open-text"></i>
                            <input tabindex="9" id="SignupEmail" type="email" class="form-control-custom" placeholder="Email">
                        </div>
                        <div id="divErrorOnSignupEmail" class="error-label"></div>
                    </div>

                    <div class="field-group">
                        <label>Mobile No</label>
                        <div class="input-box">
                            <i class="fa-solid fa-mobile-button"></i>
                            <input tabindex="10" id="SignupMobNo" type="number" class="form-control-custom" placeholder="Mobile Number" maxlength="12" oninput="javascript: if (this.value.length > this.maxLength) { this.value = this.value.slice(0, this.maxLength); }">
                        </div>
                        <div id="divErrorOnSignupMobNo" class="error-label"></div>
                    </div>

                    <button tabindex="11" type="submit" class="action-btn" id="btnSignup">Create Account</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal-overlay modalBatch" id="myModalfg">
        <div class="modalBatch-content">
            <div class="modal-header-custom">
                <h4 style="margin:0; font-weight:700;">Reset Password</h4>
                <span class="close-modal closefg">&times;</span>
            </div>
            
            <div class="modal-content-body">
                <div class="floating-field">
                    <input type="text" id="txtFGUserName" placeholder=" " />
                    <label>User Name *</label>
                    <div class="error-label" id="dvErrorFGUserName"></div>
                </div>

                <div class="floating-field">
                    <input type="email" id="txtFGEmail" placeholder=" " />
                    <label>E-Mail ID *</label>
                    <div class="error-label" id="dvErrorFGEmail"></div>
                </div>

                <button type="button" class="action-btn" id="btnValidate" style="margin-top:0">
                    <i class="fa-solid fa-paper-plane" style="margin-right:8px"></i> Get OTP
                </button>

                <div id="trOTP" style="display:none; margin-top:20px; border-top: 1px dashed #eee; padding-top:20px;">
                    <input id="txtHDOTP" hidden />
                    <div style="display: flex; gap: 10px;">
                        <div class="floating-field" style="flex:1;">
                            <input type="number" id="txtOTP" placeholder=" " maxlength="6" oninput="javascript: if (this.value.length > this.maxLength) { this.value = this.value.slice(0, this.maxLength); }" />
                            <label>6-Digit OTP</label>
                            <div class="error-label" id="dvErrorFGOTP"></div>
                        </div>
                        <button type="button" class="action-btn" id="btnCheckOTP" style="width: auto; padding: 0 20px; margin-top: 0; height: 50.5px;">Verify</button>
                    </div>
                </div>

                <div class="trSetPwds" style="display:none; margin-top:20px;">
                    <div class="floating-field">
                        <input type="password" id="txtFGPassword" placeholder=" " />
                        <label>New Password</label>
                        <div class="error-label" id="dvErrorFGPassword"></div>
                    </div>
                    <div class="floating-field">
                        <input type="password" id="txtFGConfirmPassword" placeholder=" " />
                        <label>Confirm Password</label>
                        <div class="error-label" id="dvErrorFGConfirmPassword"></div>
                    </div>
                    <button type="button" class="action-btn" id="btnSubmit">
                        <i class="fa-solid fa-check-double" style="margin-right:8px"></i> Update Password
                    </button>
                    <div class="error-label" id="dvErrorFGConfirmPassword"></div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var Aurl = '@Session["APIurl"]';
        var url = '@Session["url"]';
        var modal = document.getElementById("myModalfg");
        var span = document.getElementsByClassName("closefg")[0];
        
        span.onclick = function () {
            modal.style.display = "none";
        }
        
        $('#btnClose').click(function (e) {
            modal.style.display = "none";
        });

        $("#FGhref").click(function () {
            modal.style.display = "flex";
            $("#txtFGUserName,#txtFGEmail").prop("disabled", false);
            $(".trSetPwds,#trOTP").hide();
            $("#txtFGUserName,#txtFGEmail,#txtHDOTP,#txtOTP,#txtFGPassword,#txtFGConfirmPassword").val("");
            $("#dvErrorFGUserName,#dvErrorFGEmail,#dvErrorFGOTP,#dvErrorFGPassword,#dvErrorFGConfirmPassword").html("");
        });

        $("#btnValidate").click(function () {
            $("#dvErrorFGUserName,#dvErrorFGEmail").html("");
            var IsValid = true, CheckValidation = true;
            CheckValidation = MandatoryValidation($("#txtFGUserName"), $("#dvErrorFGUserName"));
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = EmailValidation($("#txtFGEmail"), $("#dvErrorFGEmail"), true);
            if (!CheckValidation) {
                IsValid = false;
            }
            if (IsValid) {
                var strusername = $("#txtFGUserName").val();
                var strEmail = $("#txtFGEmail").val();
                $.ajax({
                    url: Aurl + "forgotpassword/validate",                
                    type: 'get',
                    contentType: 'json',
                    data: {
                        UserName: strusername, Email: strEmail
                    },
                    success: function (data) {
                        if (data.length > 0) {
                            $.each(data, function (i, item) {
                                showSuccessSnackbar("OTP Send to given mail ID.");
                                $("#txtHDOTP").val(item.LPin);
                                $("#trOTP").show();
                                $("#txtFGUserName,#txtFGEmail").prop("disabled", true);
                            });
                        }
                        else {
                            showErrorSnackbar("Invalid Username and E-Mail combination.");
                        }
                    },
                });
            }
        });

        $("#btnCheckOTP").click(function () {
            $("#dvErrorFGOTP").html("");
            var IsValid = true, CheckValidation = true;
            CheckValidation = MandatoryValidation($("#txtOTP"), $("#dvErrorFGOTP"));
            if (!CheckValidation) {
                IsValid = false;
            }
            else {
                if ($("#txtHDOTP").val() != $("#txtOTP").val()) {
                    $("#dvErrorFGOTP").html("OTP Mismatched");
                    IsValid = false;
                }
            }
            if (IsValid) {
                $(".trSetPwds").show();
            }
        });

        $("#btnSubmit").click(function () {
            $("#dvErrorFGPassword,#dvErrorFGConfirmPassword").html("");
            var IsValid = true, CheckValidation = true;
            CheckValidation = MandatoryValidation($("#txtFGPassword"), $("#dvErrorFGPassword"));
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = MandatoryValidation($("#txtFGConfirmPassword"), $("#dvErrorFGConfirmPassword"));
            if (!CheckValidation) {
                IsValid = false;
            }
            if (IsValid) {
                if ($("#txtFGPassword").val() != $("#txtFGConfirmPassword").val()) {
                    $("#dvErrorFGConfirmPassword").html("Passwords do not match.");
                }
                else {
                    $('body').append('<div style="" id="loadingDiv"><div class="loader"></div><div class="LoaderMsg">Password Update... Please wait</div></div>');
                    var strusername = $("#txtFGUserName").val();
                    var strEmail = $("#txtFGEmail").val();
                    var strpwd = $("#txtFGPassword").val();
                    $.ajax({
                        url: Aurl + "forgotpassword/setpassword",
                        type: 'get',
                        contentType: 'json',
                        data: {
                            UserName: strusername, Email: strEmail, Password: strpwd
                        },
                        success: function (data) {
                            $("#loadingDiv").remove();
                            if (data.length > 0) {
                                $.each(data, function (i, item) {
                                    showSuccessSnackbar("Password changed successfully. You can login now.")
                                    modal.style.display = "none";
                                });
                            }
                            else {
                                showErrorSnackbar("Update failed. Please try again.");
                            }
                        }, error: function (data) {
                            $("#loadingDiv").remove();
                        }
                    });
                }
            }
        });

        function VALIDATION() {
            var IsValid = true, CheckValidation = true;
            CheckValidation = MandatoryValidation($("#Signupuser"), $("#divErrorOnSignupuser"));
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = MandatoryValidation($("#Signuppassword"), $("#divErrorOnSignuppassword"));
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = MandatoryValidation($("#SignupConfirmpassword"), $("#divErrorOnSignupConfirmpassword"));
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = MobilenoValidation($("#SignupMobNo"), $("#divErrorOnSignupMobNo"), true);
            if (!CheckValidation) {
                IsValid = false;
            }
            CheckValidation = EmailValidation($("#SignupEmail"), $("#divErrorOnSignupEmail"), true);
            if (!CheckValidation) {
                IsValid = false;
            }
            if (IsValid) {
                if ($("#Signuppassword").val() != $("#SignupConfirmpassword").val()) {
                    IsValid = false;
                    $("#divErrorOnSignupConfirmpassword").html("Passwords do not match.");
                }
            }
            return IsValid;
        }

        $("#btnSignup").click(function () {
            if (VALIDATION()) {
                $('body').append('<div style="" id="loadingDiv"><div class="loader"></div><div class="LoaderMsg">Account Creating... Please wait</div></div>');
                var mail = $("#SignupEmail").val();
                var lstMaster = {
                    "Mode" : 1,
                    "ID": 0,
                    "UserName": $("#Signupuser").val(),
                    "Password": $("#Signuppassword").val(),
                    "Mobilenumber": $("#SignupMobNo").val(),
                    "EMailID": $("#SignupEmail").val(),
                    "RoleID": 0,
                    "PwdResetCount": 0,
                    "Active": 0,
                    "UserID" : 0
                };
                $.ajax({
                    url: Aurl +"signup/save",
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(lstMaster),
                    success: function (data) {
                        $("#loadingDiv").remove();
                        $.each(data, function (i, item) {
                            if (item.MsgID == "0") {
                                SendActivationmail(mail, item.ID);
                                showSuccessSnackbar(item.Message);
                            }
                            else if (item.MsgID == "1") {
                                showErrorSnackbar(item.Message);
                            }
                        });
                    },                    
                    error: function (data) {
                        $("#loadingDiv").remove();
                        showErrorSnackbar("Error: " + data.statusText);
                    },
                });
            }
        });

        function Login() {            
            var strusername = $("#txtUserName").val();
            var strpassword = $("#txtPassword").val();            
            if(!strusername || !strpassword) {
                showErrorSnackbar("Please enter both username and password.");
                return;
            }
            $('body').append('<div style="" id="loadingDiv"><div class="loader"></div><div class="LoaderMsg">Validating User... Please wait</div></div>');
            $.ajax({
                url: Aurl + "login/get",
                type: 'get',
                contentType: 'json',
                data: {
                    UserName: strusername, Password: strpassword
                },
                xhrFields: {
                    withCredentials: true
                },
                success: function (response) {
                    //
                    if (response != "") {                    
                        $.each(response, function (i, item) {
                            if (item.RoleID > 0) {
                                window.location.href = url + '/ValidatePermission?ID=' + item.ID;
                            }
                            else {
                                $("#loadingDiv").remove();
                                showErrorSnackbar("Role not assigned. Contact administrator.");
                            }
                        });
                    }
                    else {
                        showErrorSnackbar("Invalid Username or Password.");
                        $("#loadingDiv").remove();
                    }
                },
                error: function (data) {
                    $("#loadingDiv").remove();
                    showErrorSnackbar("Login error: " + data.statusText);
                },
            });
        }

        function SendActivationmail(To,AAK) {
            $.ajax({
                url: '@Url.Action("SendMail", "Login")',
                type: 'get',
                datatype: 'json',
                data: { ToMail: To, ID: AAK },
                success: function (data) {
                    if (data == "0") {
                        showSuccessSnackbar("Activation email sent. Please verify your account.");
                    }
                    else {
                        showErrorSnackbar("Could not send activation mail.");
                    }
                },
                error: function (data) {
                    showErrorSnackbar("Mail error: " + data.statusText);
                },
            });
        }

        $(document).on('keydown', ':focusable', function (e) {
            if (e.which == 13) {
                if (e.target.localName != "button") {
                    e.preventDefault();
                    let active = document.activeElement;
                    let target = $('[tabindex="' + (active.tabIndex + 1) + '"]');
                    if (target.length > 0 && target[0].disabled) {
                        target = $('[tabindex="' + (active.tabIndex + 2) + '"]');
                    }
                    if(target.length > 0) target.focus();
                }
            }
            if (e.shiftKey && e.which == 13) {
                e.preventDefault();
                var $canfocus = $(':focusable');
                var index = $canfocus.index(this) - 1;
                if (index < 0) index = $canfocus.length - 1;
                $canfocus.eq(index).focus();
            }
        });
    </script>
