            <input id="txtDwldefile" hidden />
        </div>
        @*<span class="glyphicon glyphicon-book" style="color:deepskyblue"></span>&#x2009;&#x2009;<span style="text-align:center;font-weight:bold;color:deepskyblue" id="divClsBal"></span>*@
        @*</div>*@
    </div>
</body>


<script type="text/javascript">
    var UID = '@Session["LoginUserID"]';
    var Aurl = '@Session["APIurl"]';
    setDate("dtpFrom", 0);
    setDate("dtpTo", 0);
    $("#btnLoadData").click(function () {

        //var data = new FormData($('#file')[0].files[0]);
        var fileUpload = $("#file").get(0);
        var files = fileUpload.files;
        // Create FormData object
        var File = new FormData();
        // Looping over all files and add it to FormData object

        if (files.length > 0) {
            $("#btnLoadData").prop("disabled", true);
            var Trans = $("#cmbTransaction").val();
            var TName = $("#cmbTransaction option:selected").text();
            File.append(Trans, files[0]);
            File.append(TName, files[0]);
            File.append(UID, files[0]);
            for (var i = 0; i < files.length; i++) {
                File.append(files[i].name, files[i]);
            }
            $('#dvProgImg').show();
            $('#dvImpComp').html("");
            $.ajax({
                //url: '@Url.Action("LoadSelectFiledata", "Importexport")',
                url: Aurl + (Trans == 9 ? "uploadtransactionimportfile" : "uploadimportfile"),
                type: 'POST',
                datatype: "JSON",
                data: File,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    $("#btnLoadData").prop("disabled", false);
                    if (data == "0") {
                        showErrorSnackbar("No Records found");
                    }
                    if (data == "0.1") {
                        showErrorSnackbar("No Records found in Header and Items Sheet");
                    }
                    if (data == "0.2") {
                        showErrorSnackbar("No Records found in Header Sheet");
                    }
                    if (data == "0.3") {
                        showErrorSnackbar("No Records found in Items Sheet");
                    }
                    else if (data == "1") {
                        showErrorSnackbar("Choose any one file");
                    }
                    else if (data == "2") {
                        showErrorSnackbar("Column Name mismatching in selected file");
                    }
                    else if (data == "21") {
                        showErrorSnackbar("Column Name mismatching in Header and Items Sheet");
                    }
                    else if (data == "22") {
                        showErrorSnackbar("Column Name mismatching in Header Sheet");
                    }
                    else if (data == "23") {
                        showErrorSnackbar("Column Name mismatching in Items Sheet");
                    }
                    else {
                        $.each(data, function (i, items) {
                            $('#dvProgImg').hide();
                            $('#dvmsg').show();
                            $('#dvImpComp').html(items.Msg);

                            if (items.ID == "0") {
                                $('#dvImpComp').css("color", "green");
                                showSuccessSnackbar("Data Imported Successfully");
                                //Table.clear().draw();
                                $('#lblTotCount').text(items.Total);
                                $('#lblsaved').text(items.Saved);
                                $('#lblnotsaved').text(items.UnSaved);
                                $("#file").val(null);
                            }
                            else if (items.ID == "2") {
                                showErrorSnackbar("Error : " + items.Msg);
                                $('#dvImpComp').css("color", "red");
                                $('#dvProgImg').hide();
                            }
                            else {
                                $('#dvImpComp').css("color", "red");
                                $('#lblTotCount').text("-");
                                $('#lblsaved').text("-");
                                $('#lblnotsaved').text("-");
                                //Table.clear().draw();
                                //location.href = 'Importexport/DownloadErrorData?FPath=' + items.FilePath + "&FName=" + items.FileName;
                                location.href = Aurl + 'downloaderrordata?FPath=' + items.FilePath + "&FName=" + items.FileName;
                                showErrorSnackbar("Error Occured");
                            }
                        });
                    }
                }, error: function (data) {
                    $('#dvProgImg').hide();
                    $("#btnLoadData").prop("disabled", false);
                    showErrorSnackbar("Error Occured");
                }
            });
        } else {
            $("#btnLoadData").prop("disabled", false);
            $('#dvProgImg').hide();
            showErrorSnackbar("Choose valid file");
        }
    });
    $("#tdDateRange").hide();
    //cmbTransaction
    $("#cmbTransaction").change(function (e) {
        var sel = e.target.value;
        if (sel == 4) {
            $("#btnTemplate").hide();
        } else {
            $("#btnTemplate").show();
        }
        if (sel == 9) {            
            $("#tdDateRange").show();
        }
        else {
            $("#tdDateRange").hide();
        }
        if (sel == 10) {
            $("#btnExportData").hide();
        }
        else {
            $("#btnExportData").show();
        }
        
    });
    var Aurl = '@Session["APIurl"]';
    $("#btnTemplate").click(function () {
        var Trans = $("#cmbTransaction").val();
        var TName = $("#cmbTransaction option:selected").text();
        location.href = Aurl + 'generatetemplate?TransID=' + Trans + "&TransName=" + TName;
        @*$.ajax({
            url: '@Url.Action("GenerateTemplate", "Importexport")',
            type: 'get',
            contentType: 'json',
            data: { TransID: Trans, TransName: TName },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {

            }
        });*@
    });
    $("#btnExportData").click(function () {
        var Trans = $("#cmbTransaction").val();
        var TName = $("#cmbTransaction option:selected").text();
        var From = $("#dtpFrom").val();
        var To = $("#dtpTo").val();
        //location.href = 'Importexport/ExportData?TransID=' + Trans + "&TransName=" + TName;
        location.href = Aurl + 'exporttemplate?TransID=' + Trans + '&TransName=' + TName + '&FromDate=' + From + "&ToDate=" + To;
        @*$.ajax({
            url: '@Url.Action("GenerateTemplate", "ExportData")',
            type: 'get',
            contentType: 'json',
            data: { TransID: Trans, TransName: TName },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {

            }
        });*@
    });
    const fromDate = document.getElementById('dtpFrom');
    const toDate = document.getElementById('dtpTo');
    const errorMsg = document.getElementById('dvErrorDates');
    function validateDates() {
        errorMsg.textContent = "";
        if (fromDate.value && toDate.value) {
            const from = new Date(fromDate.value);
            const to = new Date(toDate.value);

            if (from > to) {
                errorMsg.textContent = "❌ From Date cannot be greater than To Date!";
                toDate.value = ""; // clear wrong input
                toDate.focus();    // force re-entry
                return;
            }
        }
    }

    // When From Date changes
    fromDate.addEventListener('change', () => {
        if (fromDate.value) {
            // Set minimum selectable date for To Date
            toDate.min = fromDate.value;
            toDate.focus();
        }
        validateDates();
    });

    toDate.addEventListener('change', validateDates);
</script>