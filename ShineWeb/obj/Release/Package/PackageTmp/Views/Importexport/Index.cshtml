<style>
    /* Global Overrides */
    body {
        background-color: #f7f9fb;
        color: #333;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Card Box */
    .card-box {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
        border: 1px solid #eaeaea;
    }

    /* Material Forms */
    .form-group-material {
        position: relative;
        margin-bottom: 25px;
    }

    .form-control-material {
        border: none;
        border-bottom: 2px solid #eee;
        border-radius: 0;
        padding: 10px 5px;
        background: transparent;
        box-shadow: none;
        height: 45px;
        width: 100%;
        transition: border-color 0.3s;
    }

        .form-control-material:focus {
            border-bottom-color: #007bff;
            box-shadow: none;
            outline: none;
        }

    .label-material {
        position: absolute;
        top: 12px;
        left: 5px;
        font-size: 14px;
        color: #999;
        pointer-events: none;
        transition: 0.2s ease all;
    }

    .form-control-material:focus ~ .label-material,
    .form-control-material:not(:placeholder-shown) ~ .label-material,
    .form-control-material.has-value ~ .label-material {
        top: -10px;
        font-size: 12px;
        color: #007bff;
        font-weight: 600;
    }

    /* Drag and Drop Zone */
    .upload-drop-zone {
        border: 2px dashed #ccc;
        border-radius: 10px;
        background-color: #fafafa;
        color: #777;
        text-align: center;
        padding: 40px 20px;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        margin-bottom: 20px;
    }

        .upload-drop-zone:hover, .upload-drop-zone.dragover {
            border-color: #007bff;
            background-color: #eaf4ff;
            color: #007bff;
        }

        .upload-drop-zone i {
            font-size: 40px;
            margin-bottom: 10px;
            display: block;
        }

        .upload-drop-zone span {
            font-weight: 500;
            font-size: 16px;
        }

    .file-name-display {
        margin-top: 10px;
        color: #28a745;
        font-weight: 600;
        font-size: 14px;
    }

    /* Date Range */
    .daterange-box {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 5px;
        background: #fff;
    }

        .daterange-box input[type="date"] {
            border: none;
            outline: none;
            padding: 5px;
            font-size: 13px;
            color: #555;
        }

    .daterange-separator {
        margin: 0 10px;
        color: #999;
        font-size: 12px;
    }

    /* Error Text */
    .clrdiv {
        font-size: 12px;
        margin-top: 4px;
    }

    /* Buttons */
    .btn-action {
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 6px;
        border: none;
        transition: transform 0.1s;
        margin-left: 5px;
    }

        .btn-action:active {
            transform: scale(0.98);
        }

        .btn-action i {
            margin-right: 5px;
        }

    /* Stats Cards */
    .stat-card {
        background: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        text-align: center;
        margin-bottom: 10px;
        border: 1px solid #f0f0f0;
    }

    .stat-title {
        font-size: 13px;
        color: #888;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: bold;
    }
</style>

<body>
    @Html.HiddenFor(model => model.FormName, new { @autocomplete = "off", @class = "form-control", @id = "txtFormName" })

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h4 id="MainHeading" style="margin-top: 20px; font-weight: 600; color: #444;">@ViewData["FormName"]</h4>
                <div class="toastBox"></div>

                <div class="card-box">
                    <div class="row">
                        <!-- Import Type Selection -->
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group-material">
                                <select class="form-control form-control-material has-value" id="cmbTransaction">
                                    <option value="1">Customer</option>
                                    <option value="2">Product</option>
                                    <option value="3">Purchase Order</option>
                                    <option value="4">Price Change</option>
                                    <option value="5">Order Taken</option>
                                    <option value="6">Transaction Prices</option>
                                    <option value="7">Beat Salesman Mapping</option>
                                    <option value="8">Customer Remarks</option>
                                    <option value="9">Quotation</option>
                                    <option value="10">Product Opening Import</option>
                                </select>
                                <label class="label-material">Import Type *</label>
                                <div class="clrdiv" id="dvErrorTrans" style="color:red"></div>
                            </div>

                            <!-- Date Range (Hidden by default) -->
                            <div id="tdDateRange" style="display:none; margin-top: 15px;">
                                <label style="font-size:12px; color:#888; margin-bottom:5px;">Select Date Range</label>
                                <div class="daterange-box">
                                    <input type="date" id="dtpFrom" class="form-control px-2" style="width: auto; height: 30px;" />
                                    <span class="daterange-separator">to</span>
                                    <input type="date" id="dtpTo" class="form-control px-2" style="width: auto; height: 30px;" />
                                </div>
                                <div class="clrdiv" id="dvErrorDates" style="color:red"></div>
                            </div>
                        </div>

                        <!-- Drag & Drop Zone -->
                        <div class="col-md-6 col-sm-12">
                            <div class="upload-drop-zone" id="drop-zone">
                                <i class="glyphicon glyphicon-cloud-upload"></i>
                                <span>Drag & Drop files here or click to upload</span>
                                <div id="file-name-display" class="file-name-display"></div>
                                <input type="file" accept=".xls,.xlsx" id="file" style="display: none;" />
                            </div>
                            <div class="clrdiv" id="dvErrorFiles" style="color:red; text-align:center;"></div>
                        </div>
                    </div>

                    <!-- Action Buttons (New Row) -->
                    <div class="row" style="margin-top: 25px; border-top: 1px solid #eee; padding-top: 20px;">
                        <div class="col-md-12 text-center">
                            <button class="btn btn-success btn-action" id="btnLoadData"><i class="glyphicon glyphicon-download-alt"></i> Import Data</button>
                            <button class="btn btn-info btn-action" id="btnTemplate"><i class="glyphicon glyphicon-file"></i> Template</button>
                            <button class="btn btn-warning btn-action" id="btnExportData"><i class="glyphicon glyphicon-export"></i> Export Data</button>
                        </div>
                    </div>
                </div>

                <!-- Progress Section -->
                <div class="row">
                    <div class="col-md-12">
                        <div align="center" id="dvProgImg" style="display:none; margin-top: 20px;" hidden>
                            <div class="alert alert-info" style="display:inline-block; padding: 15px 30px;">
                                <img src="~/dist/themes/default/throbber.gif" style="height:20px; vertical-align: middle;" />
                                <span style="margin-left:10px; font-weight:500;">Processing import data. Please wait...</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Results Section -->
                <div class="row" id="dvmsg" style="display:none; margin-top: 20px;" hidden>
                    <div class="col-md-12">
                        <div class="alert alert-success text-center" id="dvImpComp" style="font-size: 16px; font-weight: bold;">
                            Data Imported Successfully.
                        </div>

                        <div class="row" style="margin-top: 20px;">
                            <div class="col-md-4 col-sm-4">
                                <div class="stat-card">
                                    <div class="stat-title">Total Records</div>
                                    <div class="stat-value" style="color: #007bff;" id="lblTotCount">0</div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="stat-card">
                                    <div class="stat-title">Saved Successfully</div>
                                    <div class="stat-value" style="color: #28a745;" id="lblsaved">0</div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="stat-card">
                                    <div class="stat-title">Failed / Invalid</div>
                                    <div class="stat-value" style="color: #dc3545;" id="lblnotsaved">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <input id="txtDwldefile" hidden />
            </div>
        </div>
    </div>
</body>


<script type="text/javascript">
    var UID = '@Session["LoginUserID"]';
    var Aurl = '@Session["APIurl"]';

    $(document).ready(function() {
         setDate("dtpFrom", 0);
         setDate("dtpTo", 0);

         // Initial UI State check
         var initialTrans = $("#cmbTransaction").val();
         handleTransChange(initialTrans);
    });

    // --- Drag & Drop Logic ---
    var dropZone = document.getElementById('drop-zone');
    var fileInput = document.getElementById('file');
    var fileNameDisplay = document.getElementById('file-name-display');

    dropZone.addEventListener('click', function() {
        fileInput.click();
    });

    fileInput.addEventListener('change', function() {
        if (fileInput.files.length > 0) {
            fileNameDisplay.textContent = fileInput.files[0].name;
            $("#dvErrorFiles").html("");
        } else {
            fileNameDisplay.textContent = "";
        }
    });

    dropZone.addEventListener('dragover', function(e) {
        e.preventDefault();
        dropZone.classList.add('dragover');
    });

    dropZone.addEventListener('dragleave', function(e) {
        e.preventDefault();
        dropZone.classList.remove('dragover');
    });

    dropZone.addEventListener('drop', function(e) {
        e.preventDefault();
        dropZone.classList.remove('dragover');

        if (e.dataTransfer.files.length > 0) {
            fileInput.files = e.dataTransfer.files; // Assign dropped files to input
            fileNameDisplay.textContent = e.dataTransfer.files[0].name;
            $("#dvErrorFiles").html("");
        }
    });
    // -------------------------

    $("#btnLoadData").click(function () {
        var fileUpload = $("#file").get(0);
        var files = fileUpload.files;
        var File = new FormData();

        if (files.length > 0) {
            $("#btnLoadData").prop("disabled", true);
            var Trans = $("#cmbTransaction").val();
            var TName = $("#cmbTransaction option:selected").text();
            File.append(Trans, files[0]);
            File.append(TName, files[0]);
            File.append(UID, files[0]);
            for (var i = 0; i < files.length; i++) {
                File.append(files[i].name, files[i]);
            }
            $('#dvProgImg').show();
            $('#dvmsg').hide(); // Hide previous results
            $('#dvImpComp').html("");

            $.ajax({
                url: Aurl + (Trans == 9 ? "uploadtransactionimportfile" : "uploadimportfile"),
                type: 'POST',
                datatype: "JSON",
                data: File,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    $("#btnLoadData").prop("disabled", false);
                    $('#dvProgImg').hide();

                    // Error Handling codes
                    if (data == "0") showErrorSnackbar("No Records found");
                    else if (data == "0.1") showErrorSnackbar("No Records found in Header and Items Sheet");
                    else if (data == "0.2") showErrorSnackbar("No Records found in Header Sheet");
                    else if (data == "0.3") showErrorSnackbar("No Records found in Items Sheet");
                    else if (data == "1") showErrorSnackbar("Choose any one file");
                    else if (data == "2") showErrorSnackbar("Column Name mismatching in selected file");
                    else if (data == "21") showErrorSnackbar("Column Name mismatching in Header and Items Sheet");
                    else if (data == "22") showErrorSnackbar("Column Name mismatching in Header Sheet");
                    else if (data == "23") showErrorSnackbar("Column Name mismatching in Items Sheet");
                    else {
                        // Success case returns array
                         $.each(data, function (i, items) {
                            //$('#dvmsg').show();
                            $('#dvImpComp').html(items.Msg);
                            $('#dvImpComp').removeClass('alert-success alert-danger');

                            if (items.ID == "0") {
                                $('#dvImpComp').addClass('alert-success');
                                showErrorSnackbar("Data Imported Successfully"); // Actually success
                                $('#lblTotCount').text(items.Total);
                                $('#lblsaved').text(items.Saved);
                                $('#lblnotsaved').text(items.UnSaved);
                                $("#file").val(null);
                                fileNameDisplay.textContent = ""; // Clear file name
                            }
                            else if (items.ID == "2") {
                                showErrorSnackbar("Error : " + items.Msg);
                                $('#dvImpComp').addClass('alert-danger');
                            }
                            else {
                                $('#dvImpComp').addClass('alert-danger');
                                $('#lblTotCount').text("-");
                                $('#lblsaved').text("-");
                                $('#lblnotsaved').text("-");
                                location.href = Aurl + 'downloaderrordata?FPath=' + items.FilePath + "&FName=" + items.FileName;
                                showErrorSnackbar("Error Occured");
                            }
                        });
                    }
                }, error: function (data) {
                    $('#dvProgImg').hide();
                    $("#btnLoadData").prop("disabled", false);
                    showErrorSnackbar("Error Occured");
                }
            });
        } else {
            $("#btnLoadData").prop("disabled", false);
            $('#dvProgImg').hide();
            showErrorSnackbar("Choose valid file");
            $("#dvErrorFiles").html("Please choose or drag a file here.");
        }
    });

    $("#cmbTransaction").change(function (e) {
        handleTransChange(e.target.value);
    });

    function handleTransChange(val) {
        if (val == 4) {
            $("#btnTemplate").hide();
        } else {
            $("#btnTemplate").show();
        }
        if (val == 9) {
            $("#tdDateRange").slideDown();
        }
        else {
            $("#tdDateRange").slideUp();
        }
        if (val == 10) {
            $("#btnExportData").hide();
        }
        else {
            $("#btnExportData").show();
        }
    }

    $("#btnTemplate").click(function () {
        var Trans = $("#cmbTransaction").val();
        var TName = $("#cmbTransaction option:selected").text();
        location.href = Aurl + 'generatetemplate?TransID=' + Trans + "&TransName=" + TName;
    });

    $("#btnExportData").click(function () {
        var Trans = $("#cmbTransaction").val();
        var TName = $("#cmbTransaction option:selected").text();
        var From = $("#dtpFrom").val();
        var To = $("#dtpTo").val();
        location.href = Aurl + 'exporttemplate?TransID=' + Trans + '&TransName=' + TName + '&FromDate=' + From + "&ToDate=" + To;
    });

    const fromDate = document.getElementById('dtpFrom');
    const toDate = document.getElementById('dtpTo');
    const errorMsg = document.getElementById('dvErrorDates');

    function validateDates() {
        errorMsg.textContent = "";
        if (fromDate.value && toDate.value) {
            const from = new Date(fromDate.value);
            const to = new Date(toDate.value);

            if (from > to) {
                errorMsg.textContent = "❌ From Date cannot be greater than To Date!";
                toDate.value = "";
                toDate.focus();
                return;
            }
        }
    }

    fromDate.addEventListener('change', () => {
        if (fromDate.value) {
            toDate.min = fromDate.value;
            toDate.focus();
        }
        validateDates();
    });

    toDate.addEventListener('change', validateDates);
</script>