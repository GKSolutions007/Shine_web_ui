<script type="text/javascript">
    var Table = $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
        "bFilter": true,
        "bSearchable": true,
        "bInfo": true,
        "bPaginate": true,
        "ordering": true,
        scrollY: "400px",
        scrollX: true,
        scrollCollapse: true,
        "columnDefs": [{ "targets": [0], "visible": false }, { "targets": [5,6,7], "class": "text-center" }],
    });
    var Aurl = '@Session["APIurl"]';
    if ($("#txtAddID").val() == 0) {
        $("#trAdd").hide();
        $("#btnAdd").hide();
    }
    if ($("#txtModifyID").val() == 0) {
        //Table.column(8).visible(false);
    }
    if ($("#txtViewID").val() == 0) {
        //Table.column(9).visible(false);
    }
    if ($("#txtModifyID").val() == 0 && $("#txtViewID").val() == 0 && $("#txtAddID").val() == 1) {
        $("#dvMainTable").hide();
    }
    var arrData = [];
    var UID = '@Session["LoginUserID"]';
    var RID = '@Session["RoleID"]';
    var nMode = 1;
    var FID = $("#txtFormID").val();
    GetData(3, "");
    GetData(7, RID,0);
    function GetData(nMode,strName,DepID = 0) {
        $.ajax({
            url: Aurl + "signup/get",
            type: 'get',
            contentType: 'json',
            data: { FormID: FID, Mode: nMode, Name: strName },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                if (nMode == 3) {
                    arrData = [];
                    //Table.draw().clear();
                    if (data.length > 0) {
                        $.each(data, function (i, items) {
                            //arrData[i] = items.UserName;
                            var al = {
                                "label": items.UserName,
                                "id": items.ID,
                            }
                            arrData.push(al);
                            //Table.row.add([
                            //    items.ID,
                            //    items.Password,
                            //    items.RoleID,
                            //    items.UserName,
                            //    items.Mobilenumber,
                            //    items.EMailID,
                            //    items.RoleName,
                            //    items.Active == "True" ? "Yes" : "No",
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>',
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-eye-open clsView" style="font-size:16px" title="View"></span></a>'
                            //]).draw(false);
                        });
                        var searchValue = '';
                        if ($.fn.DataTable.isDataTable('#tblMasterData')) {
                            searchValue = $('#tblMasterData').DataTable().search(); // get current search term
                        }
                        $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                            scrollY: "450px",
                            scrollX: true,
                            scrollCollapse: true,
                            paging: true,
                            destroy: true,
                            data: data,
                            fixedColumns: false,
                            searching: true,
                            ordering: true,
                            sorting: false,
                            columns: [
                                { "data": "ID", "autoWidth": true, "visible": false, className: "dt-body-left" },
                                { "data": "UserName", "autoWidth": true, className: "dt-body-left" },
                                { "data": "Mobilenumber", "autoWidth": true, className: "dt-body-left" },
                                { "data": "EMailID", "autoWidth": true, className: "dt-body-left" },
                                { "data": "RoleName", "autoWidth": true, className: "dt-body-left" },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = value.Active == "True" ? "Yes" : "No";// '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>';
                                        return _action;
                                    }
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<label title="' + value.CDate + '">' + value.CBy + '</label>';
                                        return _action;
                                    }
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>';
                                        return _action;
                                    }, "visible": $("#txtModifyID").val() == 0 ? false : true
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-eye-open clsView" style="font-size:16px" title="View"></span></a>';
                                        return _action;
                                    }, "visible": $("#txtViewID").val() == 0 ? false : true
                                },
                            ],
                            initComplete: function () {
                                // Re-apply search value after table is fully initialized
                                this.api().search(searchValue).draw();
                            }
                        });
                        Table = $('#tblMasterData').DataTable();
                        $("#txtUserName").autocomplete({
                            minLength: 0,
                            source: arrData,
                            //autoFocus: true,
                            //focus: function (event, ui) {
                            //    $("#txtName").val(ui.item.label);
                            //    return false;
                            //},
                            select: function (event, ui) {
                                $("#txtUserName").val(ui.item.label);
                                //$("#txtRemarks").val(ui.item.id);
                                return false;
                            },
                        }).autocomplete("instance")._renderItem = function (ul, item) {
                            return $("<li class='each'>")
                                .append("<div class='acItem'><span class='name'>" +
                                    item.label + "</span></div>")
                                .appendTo(ul);
                        };
                    }
                    else {
                        showErrorSnackbar("No Records Found");
                    }
                }
                else if (nMode == 4) {
                    $.each(data, function (i, items) {                       
                        $("#txtID").val(items.ID);
                        $("#txtUserName").val(items.UserName);
                        $("#txtPassword").val(items.Password);
                        $("#txtMobileNo").val(items.Mobilenumber);
                        $("#txtEMail").val(items.EMailID);
                        $("#cmbRole").val(items.RoleID);
                        $("#chkActive").prop("checked", items.Active == "True");
                    });                    
                }
                else if (nMode == 7) {
                    $('#cmbRole').find("option").remove();
                    $('#cmbRole').append($('<option/>', {
                        value: 0,
                        text: "-- Select Role --",
                        class: ""
                    }));
                    $.each(data, function (i, items) {
                        $('#cmbRole').append($('<option/>', {
                            value: items.ID,
                            text: items.Name,
                        }));
                    });
                    $('#cmbRole').val(DepID);
                }

            }, error: function (data) {
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    //showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }
    function displayResult(item) {
        $('.alert').show().html('You selected <strong>' + item.value + '</strong>: <strong>' + item.text + '</strong>');
    }

    var modal = document.getElementById("myModalfg");
    var span = document.getElementsByClassName("closefg")[0];
    span.onclick = function () {
        modal.style.display = "none";
    }
    function CloseForm() {
        modal.style.display = "none";
    }

    $('#btnClose').click(function (e) {
        if (ClosecfFocus != 3) { CloseConfirmDialogMsg("Do you want to close?"); } else { CloseForm(); }
    });
    
    $("#btnAdd").click(function () {
        nMode = 1;
        $("#chkActive,#btnSave,#cmbRole,#btnClear,.FormclrField").prop("disabled", false);
        $(".modal-title#lblPopupheading").text("Add " + $("#MainHeading").text());
        modal.style.display = "block";
        ClearForm();
    });
    $('#btnClear').click(function (e) {
        if (cfFocus != 3) { ClearConfirmDialogMsg("Do you want to clear?"); } else { ClearForm(); }
    });
    function ClearForm() {
        $(".FormclrField").val("");
        $("#chkActive").prop("checked", true);
        $("#chkActive").prop("disabled", nMode != 2);
        $(".clrdiv").html("");
        $("#cmbRole").val();
        $("#txtUserName").focus();
        if (nMode != 1)
            modal.style.display = "none";
    }
    $("#btnSave").click(function () {
        $(".clrdiv").html("");
        var IsValid = true, ChkFormation = true;
        if ($("#txtUserName").val() == "") {
            IsValid = false;
            $("#dvErrorUserName").html("User Name should not be empty");
            showErrorSnackbar("User Name should not be empty");
        }
        if ($("#txtPassword").val() == "") {
            IsValid = false;
            $("#dvErrorPassword").html("Password should not be empty");
            showErrorSnackbar("Password should not be empty");
        }
        ChkFormation = EmailValidation($("#txtEMail"), $("#dvErrorEmailID"), true);
        if (!ChkFormation) {
            IsValid = false;
            //$("#dvErrorEmailID").html("E-Mail ID should not be empty");
        }
        ChkFormation = MobilenoValidation($("#txtMobileNo"), $("#dvErrorMobileNo"), false);
        if (!ChkFormation) {
            IsValid = false;
        }
        if (IsValid) {
            if (cfFocus != 3) { ConfirmDialogMsg("Do you want to save data?"); } else { SaveData(); }
        }
    });

    function SaveData() {
        $("#btnSave").prop("disabled", true);
        $(".clrdiv").html("");
        var lstMaster = {
            "FormID": FID,
            "Mode": nMode,
            "ID": $("#txtID").val(),
            "UserName": $("#txtUserName").val(),
            "Password": $("#txtPassword").val(),
            "RoleID": $("#cmbRole").val(),
            "Mobilenumber": $("#txtMobileNo").val(),
            "EMailID": $("#txtEMail").val(),
            "Active": $("#chkActive").is(":checked") ? 1 : 0,
            "UserID": UID
        };
            $.ajax({
                url: Aurl + "signup/save",
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(lstMaster),
                cache: false,
                processData: false,
                success: function (data) {
                    $("#btnSave").prop("disabled", false);
                    $.each(data, function (i, items) {
                        if (items.MsgID == 0) {
                            showSuccessSnackbar(items.Message);
                            ClearForm();
                            GetData(3, "");
                            modal.style.display = "none";
                        }
                        else if (items.Message == "UserName") {
                            $("#dvErrorUserName").html("User Name already exists");
                            showErrorSnackbar("User Name already exists");
                        }
                        else if (items.Message == "MobileNo") {
                            $("#dvErrorMobileNo").html("Mobile No already exists");
                            showErrorSnackbar("Mobile No already exists");
                        }
                        else if (items.Message == "EMailID") {
                            $("#dvErrorEmailID").html("E-Mail ID already exists");
                            showErrorSnackbar("E-Mail ID already exists");
                        }
                        else {
                            //$("#dvErrorUserName").html(items.Message);
                            showErrorSnackbar(items.Message);
                        }
                    });
                }, error: function (data) {
                    $("#btnSave").prop("disabled", false);
                    if (data.status == "401") {
                        var msg = data.responseJSON.Message;
                        //showErrorSnackbar(msg + " Logout and Login again.");
                    }
                }
            });
    }
    $('#tblMasterData tbody').on('click', '.clsView', function () {
        nMode = 3;
        $(".clrdiv").html("");
        $(".modal-title#lblPopupheading").text("View " + $("#MainHeading").text());
        rowdata = Table.row($(this).parents('tr')).data();
        var ID = rowdata.ID;//[0];
        GetData(4, ID);              
        $(".FormclrField").prop("disabled", true);
        $("#chkActive,#btnSave,#btnClear,#cmbRole").prop("disabled", true);
        modal.style.display = "block";

    });

    $('#tblMasterData tbody').on('click', '.clsEdit', function () {
        $(".clrdiv").html("");
        nMode = 2;
        rowdata = Table.row($(this).parents('tr')).data();
        $(".modal-title#lblPopupheading").text("Edit " + $("#MainHeading").text());
        var ID = rowdata.ID;//[0];
        GetData(4, ID);       
        $(".FormclrField").prop("disabled", false);
        $("#chkActive,#btnSave,#cmbRole").prop("disabled", false);
        $("#btnClear").prop("disabled", true);
        modal.style.display = "block";

    });
    window.addEventListener('keydown', function (event) {
        // Check if the F8 key is pressed (key code 119)
        if (event.keyCode === 119) {
            var url = $("#txtChildRoleURL").val();
            if (url != "") {//
                var id = event.target.id;
                if (id == "cmbRole") {
                    $("#lbliframeheading").text("Role");
                    document.getElementById("ifrSMG").src = url + "&ParFFID=cmbRole";;
                    // Prevent default action if any (e.g., browser F8 behavior)
                    event.preventDefault();
                    // Open the modal when F8 is pressed
                    modaliframe.style.display = "block";
                }
