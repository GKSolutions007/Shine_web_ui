@model ShineWeb.Models.SingleMasterModel
@{
    ViewBag.Title = ViewData["FormName"];
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/navbar.css" rel="stylesheet" />
<link href="~/Content/buttonTop.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/jquery-ui.css">
<link href="~/Content/dataTables.dataTables.2.2.2.css" rel="stylesheet" />
<link href="~/Content/fontawesome.6.0.0.css" rel="stylesheet" />

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/dataTables.2.2.2.js"></script>
<script src="~/Scripts/js/refreshtoken.js"></script>
<style>
    :root {
        --primary-color: #4f46e5;
        --secondary-color: #64748b;
        --success-color: #10b981;
        --danger-color: #ef4444;
        --bg-glass: rgba(255, 255, 255, 0.95);
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    body {
        background-color: #f8fafc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-container {
        padding: 2rem;
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .modern-card {
        background: var(--bg-glass);
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(226, 232, 240, 0.8);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

    .card-header-modern {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #f1f5f9;
        padding-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    #MainHeading {
        font-weight: 500;
        color: #1e293b;
        margin-bottom: 1rem;
        text-align: center;
    }

    .form-floating-modern {
        position: relative;
        margin-bottom: 1rem;
    }

    .labelup {
        position: absolute;
        top: -10px;
        left: 12px;
        background: #fff;
        padding: 0 6px;
        font-size: 0.85rem;
        color: var(--primary-color);
        font-weight: 600;
        z-index: 10;
        border-radius: 4px;
    }

    .form-control-modern {
        border-radius: 8px;
        border: 1px solid #cbd5e1;
/*        padding: 0.75rem 1rem;*/
        transition: all 0.2s;
        height: auto;
    }

    .form-control-modern:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        outline: none;
    }

    .btn-modern {
        border-radius: 8px;
        padding: 0.6rem 1.25rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
        cursor: pointer;
        border: none;
    }

    .btn-clear {
        background-color: #f1f5f9;
        color: #475569;
    }

    .btn-clear:hover {
        background-color: #e2e8f0;
        transform: translateY(-1px);
    }

    .btn-save {
        background: linear-gradient(135deg, #4f46e5 0%, #3730a3 100%);
        color: white;
    }

    .btn-save:hover {
        box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        transform: translateY(-1px);
    }

    .btn-save:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .table-modern thead th {
/*        background-color: #f8fafc;*/
        color: #475569;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 1rem;
        letter-spacing: 0.05em;
        padding: 1rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .table-modern tbody td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
    }

    .order-input {
        width: 80px !important;
        text-align: left !important;
        border-radius: 6px;
        border: 1px solid #e2e8f0;
        margin: 0 auto;
    }

    .order-input:focus {
        border-color: var(--primary-color);
    }

    .ui-autocomplete {
        border-radius: 8px;
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        max-height: 245px;
        overflow-y: auto;
    }

    /* Modal Styling Content */
    .modalBatch {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }

    .modalBatch-content {
        border-radius: 16px;
        border: none;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .clrdiv {
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    @@media (max-width: 768px) {
        .main-container { padding: 1rem; }
    }
</style>
<body>
    <div class="main-container">
        @Html.HiddenFor(model => model.FormID, new { @autocomplete = "off", @class = "form-control", @id = "txtFormID" })
        @Html.HiddenFor(model => model.FormName, new { @autocomplete = "off", @class = "form-control", @id = "txtFormName" })

        <h2 id="MainHeading">@ViewData["FormName"]</h2>
        <div class="toastBox"></div>
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <div class="modern-card">
                    <div class="card-header-modern">
                        <i class="fa-solid fa-layer-group"></i> Modules
                    </div>
                    <div class="form-floating-modern">
                        <label class="labelup">Module</label>
                        <select id="cmbModule" class="form-control form-control-modern"></select>
                        <div class="clrdiv" id="dvErrorModule" style="color:var(--danger-color)"></div>
                    </div>

                    <div class="d-flex gap-2 justify-content-center mt-4" style="align-content:end">
                        <button type="button" class="btn-modern btn-danger" id="btnClear">
                            <i class="fa-solid fa-rotate-left"></i> Clear
                        </button>
                        <button type="button" class="btn-modern btn-success" id="btnSave">
                            <i class="fa-solid fa-floppy-disk"></i> Save
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-8 col-lg-8">
                <div class="modern-card">
                    <div class="card-header-modern">
                        <i class="fa-solid fa-list-ol"></i> Menu Items Order
                    </div>
                    <div class="table-responsive">
                        <table class="table table-modern" id="tblMasterData" width="100%">
                            <thead>
                                <tr class="trclrforcolheader">
                                    <th style="width:10%;">#</th>
                                    <th style="width:0%; display:none;">ID</th>
                                    <th style="width:60%;">Menu Name</th>
                                    <th style="width:30%; text-align:center;">Display Order</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<script type="text/javascript">
    var Table = $('#tblMasterData').DataTable({
        pageLength: ItemsperPage,
        lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
        "bFilter": true,
        "bSearchable": true,
        "bInfo": false,
        "bPaginate": false,
        "ordering": false,
        scrollY: "400px",
        scrollX: true,
        scrollCollapse: true,
        "columnDefs": [{ "targets": [1], "visible": false, searchable: false }],
        language: {
            search: "_INPUT_",
            searchPlaceholder: "Search menus..."
        }
    });

    var Aurl = '@Session["APIurl"]';
    var UID = '@Session["LoginUserID"]';
    var nMode = 1;
    var FID = $("#txtFormID").val();
    GetData(1,0);
    var arrData = [];
    function GetData(nMode,nMenuID) {
        $.ajax({
            url: Aurl + "menuorder/get",
            type: 'get',
            contentType: 'json',
            data: { Mode: nMode, Name: nMenuID },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                if (nMode == 1) {
                    $('#cmbModule').find("option").remove();
                    $('#cmbModule').append($('<option/>', {
                        value: 0,
                        text: "-- Select Module --",
                    }));
                    $.each(data, function (i, items) {
                        $('#cmbModule').append($('<option/>', {
                            value: items.ID,
                            text: items.Name,
                        }));
                    });
                }
                else if (nMode == 2) {
                    //Table.draw().clear(); Table.draw().clear();
                    if (data.length > 0) {                        
                        //$.each(data, function (i, items) {
                        //    Table.row.add([
                        //        (i + 1),
                        //        items.ID,
                        //        items.Name,
                        //        '<input type="number" class="form-control" value="' + items.Value +'" onkeypress="return isNumberKey(event)">'
                        //    ]).draw(false);
                        //});
                        $('#tblMasterData').DataTable({
                            pageLength: ItemsperPage,
                            lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                            scrollY: "450px",
                            scrollX: true,
                            scrollCollapse: true,
                            paging: true,
                            destroy: true,
                            data: data,
                            fixedColumns: false,
                            searching: true,
                            ordering: true,
                            sorting: false,
                            columns: [
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value, meta) {
                                        return (meta.row + 1);
                                    }
                                },
                                { "data": "ID", "visible": false },
                                { "data": "Name", className: "dt-body-left" },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        return '<input type="number" min="1" class="form-control form-control-modern order-input" value="' + value.Value + '" onkeypress="return isNumberKey(event)">';
                                    }
                                }                                
                            ],
                            language: {
                                search: "_INPUT_",
                                searchPlaceholder: "Search menus..."
                            }
                        });
                        Table = $('#tblMasterData').DataTable();
                    }
                    else {
                        showErrorSnackbar("No Records Found");
                    }
                }                
            }, error: function (data) {
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    //showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }
    $('#tblMasterData').on('input', '.order-input', function () {
        if (this.value < 1) {
            this.value = 1;
        }
    });
    $('input[type=number]').focusin(function (e) {
        $(this).select();
    });    
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
    $('#cmbModule').change(function (e) {
        var val = e.target.value;
        if (val > 0) {
            GetData(2, val);
        }
        else{
            Table.draw().clear(); Table.draw().clear();
        }
    });
    $('#btnClear').click(function (e) {
        if (cfFocus != 3) { ClearConfirmDialogMsg("Do you want to clear?"); } else { ClearForm(); }
    });
    function ClearForm() {
        $(".clrdiv").html("");
        $("#cmbModule").val("0");
        Table.draw().clear(); Table.draw().clear();
        $("#cmbModule").focus();
    }
    
    function ValidateOrder() {
        var IsValid = true;
        $("#tblMasterData tbody tr").each(function () {
            var nOrder = 0;
            rowdata = Table.row($(this)).data();
            var valhasvalue = true;
            $(this).css("color", "black");
            $(this).find("input").each(function (index) {
                $(this).css("border-color", "black");
                if ($(this).val() == "") {
                    IsValid = false;
                    valhasvalue = false;
                    $(this).css("border-color", "red");
                }
            });
            if (!valhasvalue) {
                $(this).css("color", "red");
            }
        });
        return IsValid;
    }
    $("#btnSave").click(function () {
        $(".clrdiv").html("");
        if ($("#cmbModule").val() > 0) {
            if (ValidateOrder()) {
                if (cfFocus != 3) { ConfirmDialogMsg("Do you want to save data?"); } else { SaveData(); }
            } else {
                //alert("Order value should not be empty");
                showErrorSnackbar("Order value should not be empty");
            }
        }
        else {
            $("#dvErrorModule").html("Select Module");
            showErrorSnackbar("Select Module");
        }
    });
    function SaveData() {
        $("#btnSave").prop("disabled", true);
        $(".clrdiv").html("");
        var listmenu = [];
        $("#tblMasterData tbody tr").each(function () {
            var nOrder = 0;
            rowdata = Table.row($(this)).data();
            var nMenuID = rowdata.ID;//[1];
            var valhasvalue = true;
            $(this).find("input").each(function (index) {
                var lst = {
                    "MenuID": nMenuID,
                    "Order": $(this).val()
                }
                listmenu.push(lst);
            });
        });
        var lstMaster = {
            "Mode": 3,
            "UserID": UID,
            "lstMenus": listmenu
        };
        $.ajax({
            url: Aurl + "menuorder/save",
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(lstMaster),
            cache: false,
            processData: false,
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                $("#btnSave").prop("disabled", false);
                $.each(data, function (i, items) {
                    if (items.MsgID == 0) {
                        showSuccessSnackbar(items.Message);
                        //alert(items.Message);
                    }
                    else {
                        $("#dvErrorName").html(items.Message);
                        //alert(items.Message);
                    }
                });
            }, error: function (data) {
                $("#btnSave").prop("disabled", false);
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    //showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }    
    $('input, select ,button, textarea').on('keydown', function (e) {
        if (e.key === "Enter") {
            if (e.target.localName != "button") {
                e.preventDefault(); // Prevent default behavior
                var nextinp = $('input,select,button, textarea').eq($('input,select,button, textarea').index(this) + 1);
                if (nextinp.length) {
                    if (nextinp[0].disabled) {
                        nextinp = $('input,select,button, textarea').eq($('input,select,button, textarea').index(this) + 2);
                    }
                    nextinp.focus();
                    nextinp.select();
                }
            }
        }
        if (e.shiftKey && e.which == 13) {
            e.preventDefault();
            var $canfocus = $(':focusable');
            var index = $canfocus.index(this) - 1;
            if (index >= $canfocus.length) index = 0;
            $canfocus.eq(index).focus();
        }
    });
</script>