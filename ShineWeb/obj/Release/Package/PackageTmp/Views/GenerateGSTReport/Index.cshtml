@model ShineWeb.Models.SingleMasterModel
@{
    ViewBag.Title = ViewData["FormName"];
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/navbar.css" rel="stylesheet" />
<link href="~/Content/buttonTop.css" rel="stylesheet" />
<link href="~/Content/Snackbar.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/jquery-ui.css">
<link href="~/Content/dataTables.dataTables.2.2.2.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/dataTables.2.2.2.js"></script>
<script src="~/Scripts/js/refreshtoken.js"></script>
<style>
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #f8f9fa;
        --accent-color: #27ae60;
        --error-color: #e74c3c;
        --text-color: #2c3e50;
        --border-radius: 12px;
        --card-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        --input-focus: rgba(74, 144, 226, 0.2);
    }

    body {
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        color: var(--text-color);
    }

    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 20px;
    }

    .report-card {
        background: #ffffff;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        width: 100%;
        max-width: 450px;
        padding: 40px;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .report-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .report-header h3 {
        color: var(--primary-color);
        font-weight: 700;
        margin: 0;
        font-size: 24px;
        letter-spacing: -0.5px;
    }

    .report-header p {
        color: #7f8c8d;
        margin-top: 8px;
        font-size: 14px;
    }

    .custom-form-group {
        margin-bottom: 25px;
    }

    .custom-form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #34495e;
        font-size: 0.9rem;
    }

    .modern-input {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #edf2f7;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s ease;
        background-color: #fcfdfe;
        color: #2d3748;
    }

    .modern-input:focus {
        outline: none;
        border-color: var(--primary-color);
        background-color: #fff;
        box-shadow: 0 0 0 4px var(--input-focus);
    }

    .error-feedback {
        color: var(--error-color);
        font-size: 12px;
        margin-top: 6px;
        font-weight: 500;
        min-height: 18px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        cursor: pointer;
        user-select: none;
    }

    .checkbox-wrapper input {
        width: 18px;
        height: 18px;
        margin-right: 12px;
        cursor: pointer;
        accent-color: var(--primary-color);
    }

    .checkbox-wrapper label {
        margin: 0;
        font-weight: 500;
        font-size: 14px;
        color: #4a5568;
        cursor: pointer;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn-modern {
        flex: 1;
        padding: 14px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        border: none;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-modern-secondary {
        background-color: #f1f5f9;
        color: white;
    }

    .btn-modern-secondary:hover {
        background-color: #e2e8f0;
        color: #1e293b;
    }

    .btn-modern-primary {
        background-color: var(--primary-color);
        color: white;
        box-shadow: 0 4px 12px rgba(74, 144, 226, 0.2);
    }

    .btn-modern-primary:hover {
        background-color: #357abd;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(74, 144, 226, 0.3);
    }

    .btn-modern:active {
        transform: translateY(0);
    }

    .btn-modern:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
    }
</style>
<body>
    <div class="toast-container toastBox"></div>

    <div class="page-wrapper">
        @Html.HiddenFor(model => model.FormID, new { @id = "txtFormID" })
        @Html.HiddenFor(model => model.FormName, new { @id = "txtFormName" })
        @Html.HiddenFor(model => model.ID, new { @id = "txtID" })

        <div class="report-card">
            <div class="report-header">
                <h3>@ViewData["FormName"]</h3>
                <p>Generate and export your GST distribution reports</p>
            </div>

            <div class="report-form">
                <div class="custom-form-group">
                    <label for="dtpFFrom">From Date</label>
                    <input class="modern-input FormfilterclrField" type="date" id="dtpFFrom" oninput="if (this.value > this.max) { this.value = this.max; }">
                    <div id="divErrFFrom" class="error-feedback clrdivs"></div>
                </div>

                <div class="custom-form-group">
                    <label for="dtpFTo">To Date</label>
                    <input class="modern-input FormfilterclrField" type="date" id="dtpFTo" oninput="if (this.value > this.max) { this.value = this.max; }">
                    <div id="divErrFTo" class="error-feedback clrdivs"></div>
                </div>

                <div class="checkbox-wrapper" hidden>
                    <input type="checkbox" id="chkWithoutEInvoice">
                    <label for="chkWithoutEInvoice">Include items without E-Invoice</label>
                </div>

                <div class="action-buttons">
                    <button type="button" id="btnQAClear" class="btn-modern btn-modern-secondary btn-danger">
                        <span class="glyphicon glyphicon-refresh"></span> Reset
                    </button>
                    <button type="button" id="btnQASubmit" class="btn-modern btn-modern-primary btn-success">
                        <span class="glyphicon glyphicon-saved"></span> Generate Report
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript">
    var Aurl = '@Session["APIurl"]';
    setDate("dtpFFrom", 6);
    setDate("dtpFTo", 7);
    $("#btnQAClear").click(function () {
        $(".clrdivs").html("");
        setDate("dtpFFrom", 6);
        setDate("dtpFTo", 7);
    });
    $("#btnQASubmit").click(function () {        
        var IsValid = true;
        if ($("#dtpFFrom").val() == "") {
            IsValid = false;
            $("#divErrFFrom").html("From date should not be empty");
        }
        if ($("#dtpFTo").val() == "") {
            IsValid = false;
            $("#divErrFTo").html("To date should not be empty");
        }
        if ($("#dtpFFrom").val() > $("#dtpFTo").val()) {
            IsValid = false;
            $("#divErrFFrom").html("From date should be lessthan To Date");
        }
        if (IsValid) {
            $("#btnQASubmit").prop("disabled", true);
            GenerateReport();
            $("#btnQASubmit").prop("disabled", false);
        }
    });    
    function GenerateReport() {
        let sb = document.getElementById("RepLoadersnackbar");
        sb.classList.add("show");
        var EInv = $("#chkWithoutEInvoice").is(":checked") ? 1 : 0
        location.href = Aurl + 'gstreportexport/gstexport?FromDate=' + $("#dtpFFrom").val() + "&ToDate=" + $("#dtpFTo").val() + "&EInvOnly=" + EInv;
        setTimeout(() => {
            sb.classList.remove("show");
        }, 5000)        
    }
</script>