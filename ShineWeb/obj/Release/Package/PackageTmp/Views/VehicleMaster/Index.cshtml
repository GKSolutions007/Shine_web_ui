<script type="text/javascript">
    var Table = $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
        "bFilter": true,
        "bSearchable": true,
        "bInfo": true,
        "bPaginate": true,
        "ordering": true,
        scrollY: "400px",
        scrollX: true,
        scrollCollapse: true,
        "columnDefs": [{ "targets": [0], "visible": false, searchable: false }, { "targets": [7, 8, 9], "class": "text-center" }],
    });
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();

    if (dd < 10) {
        dd = '0' + dd;
    }

    if (mm < 10) {
        mm = '0' + mm;
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("txtPurchaseDate").setAttribute("max", today);
    var Aurl = '@Session["APIurl"]';
    if ($("#txtAddID").val() == 0) {
        $("#trAdd").hide();
        $("#btnAdd").hide();
    }
    if ($("#txtModifyID").val() == 0) {
        //Table.column(8).visible(false);
    }
    if ($("#txtViewID").val() == 0) {
        //Table.column(9).visible(false);
    }
    if ($("#txtModifyID").val() == 0 && $("#txtViewID").val() == 0 && $("#txtAddID").val() == 1) {
        $("#dvMainTable").hide();
    }
    var arrData = [];
    var UID = '@Session["LoginUserID"]';
    var nMode = 1;
    var FID = $("#txtFormID").val();
    GetData(3);
    function GetData(nMode,nID = 0) {
        $.ajax({
            url: Aurl + "vehicle/get",
            type: 'get',
            contentType: 'json',
            data: { FormID: FID, Mode: nMode, Name: nID },
            xhrFields: {
                withCredentials: true
            },
            success: function (data) {
                if (data.length > 0) {
                    if (nMode == 3) {
                        arrData = [];
                        //Table.draw().clear();
                        $.each(data, function (i, items) {
                            //arrData[i] = items.VehicleNo;
                            var al = {
                                "label": items.VehicleNo,
                                "active": items.Active,
                                "id": items.ID,
                            }
                            arrData.push(al);
                            //Table.row.add([
                            //    items.ID,
                            //    items.VehicleNo,
                            //    items.VehicleName,
                            //    items.DOPurchase,
                            //    items.InsuranceDate,
                            //    items.InsuranceExpire,
                            //    items.FCDate,
                            //    items.Active == "True" ? "Yes" : "No",
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>',
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-eye-open clsView" style="font-size:16px" title="View"></span></a>',
                            //]).draw(false);
                        });
                        var searchValue = '';
                        if ($.fn.DataTable.isDataTable('#tblMasterData')) {
                            searchValue = $('#tblMasterData').DataTable().search(); // get current search term
                        }
                        $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                            scrollY: "450px",
                            scrollX: true,
                            scrollCollapse: true,
                            paging: true,
                            destroy: true,
                            data: data,
                            fixedColumns: false,
                            searching: true,
                            ordering: true,
                            sorting: false,
                            columns: [
                                { "data": "ID", "autoWidth": true, "visible": false, className: "dt-body-left" },
                                { "data": "VehicleNo", "autoWidth": true, className: "dt-body-left" },
                                { "data": "VehicleName", "autoWidth": true, className: "dt-body-left" },
                                { "data": "DOPurchase", "autoWidth": true, className: "dt-body-left" },
                                { "data": "InsuranceDate", "autoWidth": true, className: "dt-body-left" },
                                { "data": "InsuranceExpire", "autoWidth": true, className: "dt-body-left" },
                                { "data": "FCDate", "autoWidth": true, className: "dt-body-left" },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = value.Active == "True" ? "Yes" : "No";// '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>';
                                        return _action;
                                    }
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<label title="' + value.CDate + '">' + value.CBy + '</label>';
                                        return _action;
                                    }
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>';
                                        return _action;
                                    }, "visible": $("#txtModifyID").val() == 0 ? false : true
                                },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-eye-open clsView" style="font-size:16px" title="View"></span></a>';
                                        return _action;
                                    }, "visible": $("#txtViewID").val() == 0 ? false : true
                                },
                            ],
                            initComplete: function () {
                                // Re-apply search value after table is fully initialized
                                this.api().search(searchValue).draw();
                            }
                        });
                        Table = $('#tblMasterData').DataTable();
                        $("#txtVehicleNo").autocomplete({
                            minLength: 0,
                            source: arrData,
                            //autoFocus: true,
                            //focus: function (event, ui) {
                            //    $("#txtName").val(ui.item.label);
                            //    return false;
                            //},
                            select: function (event, ui) {
                                $("#txtVehicleNo").val(ui.item.label);
                                //$("#txtRemarks").val(ui.item.id);
                                return false;
                            },
                        }).autocomplete("instance")._renderItem = function (ul, item) {
                            return $("<li class='each'>")
                                .append("<div class='acItem'><span class='name'>" +
                                    item.label + "</span></div>")
                                .appendTo(ul);
                        };


                        //var txtName = $('#txtVehicleNo');
                        //autocomplete = txtName.typeahead({ scrollBar: true, onSelect: displayResult });
                        //autocomplete.data('typeahead').source = null;
                        //autocomplete.data('typeahead').source = arrData;
                    }
                    else if (nMode == 4) {                       
                        $.each(data, function (i, items) {
                            $("#txtID").val(items.ID);
                            $("#txtVehicleNo").val(items.VehicleNo);
                            $("#txtVehicleName").val(items.VehicleName);
                            $("#txtPurchaseDate").val(items.DOPurchase);
                            $("#txtInsuranceDate").val(items.InsuranceDate);
                            $("#txtInsuranceExpiryDate").val(items.InsuranceExpire);
                            $("#txtFCDate").val(items.FCDate);
                            $("#chkActive").prop("checked", items.Active == "True");
                        });
                    }
                }
                else {
                    showErrorSnackbar("No Records Found");
                }
            }, error: function (data) {
                if (data.status == "401") {
                    var msg = data.responseJSON.Message;
                    //showErrorSnackbar(msg + " Logout and Login again.");
                }
            }
        });
    }
    function displayResult(item) {
        $('.alert').show().html('You selected <strong>' + item.value + '</strong>: <strong>' + item.text + '</strong>');
    }

    var modal = document.getElementById("myModalfg");
    var span = document.getElementsByClassName("closefg")[0];
    span.onclick = function () {
        modal.style.display = "none";
    }
    function CloseForm() {
        modal.style.display = "none";
    }

    $('#btnClose').click(function (e) {
        if (ClosecfFocus != 3) { CloseConfirmDialogMsg("Do you want to close?"); } else { CloseForm(); }
    });
    $("#btnAdd").click(function () {
        nMode = 1;
        $("#chkActive,#btnSave,#cmbTax,#btnClear,.FormclrField").prop("disabled", false);
        $(".modal-title#lblPopupheading").text("Add " + $("#MainHeading").text());
        modal.style.display = "block";
        ClearForm();
    });
    $('#btnClear').click(function (e) {
        if (cfFocus != 3) { ClearConfirmDialogMsg("Do you want to clear?"); } else { ClearForm(); }
    });
    function ClearForm() {
        $(".FormclrField").val("");
        $("#chkActive").prop("checked", true);
        $("#chkActive").prop("disabled", nMode != 2);
        $(".clrdiv").html("");
        $("#txtVehicleNo").focus();
        if (nMode != 1)
            modal.style.display = "none";
    }
    $("#btnSave").click(function () {
        $(".clrdiv").html("");
        var IsValid = true, ChkFormation = true;
        if ($("#txtVehicleNo").val() == "") {
            IsValid = false;
            $("#dvErrorVehicleNo").html("Vehicle No should not be empty");
            showErrorSnackbar("Vehicle No should not be empty");
        }
        else {
            
            var ChkFormation = AlphaAndNumericonly($("#txtVehicleNo").val(), $("#dvErrorVehicleNo"));
            if (!ChkFormation) {
                IsValid = false;
            }
        }
        if ($("#txtVehicleName").val() == "") {
            IsValid = false;
            $("#dvErrorVehicleName").html("Vehicle Name should not be empty");
            showErrorSnackbar("Vehicle Name should not be empty");
        }
        if ($("#txtInsuranceDate").val() != "") {
            if ($("#txtPurchaseDate").val() > $("#txtInsuranceDate").val()) {
                IsValid = false;
                $("#dvErrorInsuranceDate").html("Insurance Date should be greater than Purchase date");
                showErrorSnackbar("Insurance Date should be greater than Purchase date");
            }
        }
        if ($("#txtInsuranceExpiryDate").val() != "") {
            if ($("#txtPurchaseDate").val() > $("#txtInsuranceExpiryDate").val()) {
                IsValid = false;
                $("#dvErrorInsuranceExpiryDate").html("Insurance Expiry Date should be greater than Purchase date");
                showErrorSnackbar("Insurance Expiry Date should be greater than Purchase date");
            }
        }
        if ($("#txtFCDate").val() != "") {
            if ($("#txtPurchaseDate").val() > $("#txtFCDate").val()) {
                IsValid = false;
                $("#dvErrorFCDate").html("FC Date should be greater than Purchase date");
                showErrorSnackbar("FC Date should be greater than Purchase date");
            }
        }
        //ChkFormation = SACValidation($("#txtSAC"), $("#dvErrorSAC"));
        if (!ChkFormation) {
            IsValid = false;
        }
        if (IsValid) {
            if (cfFocus != 3) { ConfirmDialogMsg("Do you want to save data?"); } else { SaveData(); }
        }
    });

    function SaveData() {
        $("#btnSave").prop("disabled", true);
        $(".clrdiv").html("");
        var lstMaster = {
            "FormID": FID,
            "Mode": nMode,
            "ID": $("#txtID").val(),
            "VehicleNo": $("#txtVehicleNo").val(),
            "VehicleName": $("#txtVehicleName").val(),
            "DOPurchase": $("#txtPurchaseDate").val(),
            "InsuranceDate": $("#txtInsuranceDate").val(),
            "InsuranceExpire": $("#txtInsuranceExpiryDate").val(),
            "FCDate": $("#txtFCDate").val(),
            "Active": $("#chkActive").is(":checked") ? 1 : 0,
            "UserID": UID
        };
            $.ajax({
                url: Aurl + "vehicle/save",
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(lstMaster),
                cache: false,
                processData: false,
                xhrFields: {
                    withCredentials: true
                },
                success: function (data) {
                    $("#btnSave").prop("disabled", false);
                    $.each(data, function (i, items) {
                        if (items.MsgID == 0) {
                            showSuccessSnackbar(items.Message);
                            ClearForm();
                            GetData(3);
                            modal.style.display = "none";
                        }
                        else {
                            $("#dvErrorVehicleNo").html(items.Message);
                            showErrorSnackbar(items.Message);
                        }
                    });
                }, error: function (data) {
                    $("#btnSave").prop("disabled", false);
                    if (data.status == "401") {
                        var msg = data.responseJSON.Message;
                        //showErrorSnackbar(msg + " Logout and Login again.");
                    }
                }
