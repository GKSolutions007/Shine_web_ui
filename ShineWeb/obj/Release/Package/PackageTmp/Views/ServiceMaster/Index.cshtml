                if (data.length > 0) {
                    if (nMode == 3) {
                        arrData = [];
                        Table.draw().clear();
                        $.each(data, function (i, items) {
                            //arrData[i] = items.Name
                            var al = {
                                "label": items.Name,
                                "active": items.Active,
                                "id": items.ID,
                            }
                            arrData.push(al);
                            //Table.row.add([
                            //    items.ID,
                            //    items.TaxID,
                            //    items.Name,
                            //    items.TaxName,
                            //    items.SACCode,
                            //    parseFloat(items.Inwardprice).toFixed(DecVal),
                            //    parseFloat(items.Outwardprice).toFixed(DecVal),
                            //    items.Active == "True" ? "Yes" : "No",
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>',
                            //    '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-eye-open clsView" style="font-size:16px" title="View"></span></a>',
                            //    items.Inwardprice + ","+items.Outwardprice
                            //]).draw(false);
                        });
                        var searchValue = '';
                        if ($.fn.DataTable.isDataTable('#tblMasterData')) {
                            searchValue = $('#tblMasterData').DataTable().search(); // get current search term
                        }
                        $('#tblMasterData').DataTable({pageLength: ItemsperPage,lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, "All"]],
                            scrollY: "450px",
                            scrollX: true,
                            scrollCollapse: true,
                            paging: true,
                            destroy: true,
                            data: data,
                            fixedColumns: false,
                            searching: true,
                            ordering: true,
                            sorting: false,
                            columns: [
                                { "data": "ID", "autoWidth": true, "visible": false, className: "dt-body-left" },
                                { "data": "Name", "autoWidth": true, className: "dt-body-left" },
                                { "data": "TaxName", "autoWidth": true, className: "dt-body-left" },
                                { "data": "SACCode", "autoWidth": true, className: "dt-body-left" },
                                { "data": "Inwardprice", "autoWidth": true, className: "dt-body-right" },
                                { "data": "Outwardprice", "autoWidth": true, className: "dt-body-right" },
                                {
                                    className: "dt-body-center",
                                    "mRender": function (data, type, value) {
                                        var _action = value.Active == "True" ? "Yes" : "No";// '<a href="javascript:void(0) style="cursor: pointer;"><span class="glyphicon glyphicon-pencil clsEdit" style="font-size:16px" title="Edit"></span></a>';
